<?xml version="1.0" encoding="utf-8" ?>
<SaladoPlayer>
	<global debug="true" transition="time:0.5" autorotation="enabled:false" mouseDrag="enabled:true" mouseInertial="enabled:false">
		<trace open="false" size="height:100"/>
		<branding visible="false"/>
		<location directory="../../data/" hotspot="hotspots/arrow.png"/>
	</global>
	<panoramas>
		<panorama id="start" path="000037.xml"/>
	</panoramas>
	<modules>
		<DebugBubble path="modules/DebugBubble.swf">
			<settings active="true"/>
		</DebugBubble>
		<NavigationBar path="modules/NavigationBar.swf">
			<buttons path="modules/images/buttons_30x30_blue_admin.png">
				<button name="autorotation" visible="false"/>
				<button name="drag" visible="false"/>
				<extraButton name="b" action="togglePermalink"/>
				<extraButton name="c" action="showCeiling"/>
				<extraButton name="d" action="showFloor"/>
				<extraButton name="e" action="toggleDirectoryFixer"/>
			</buttons>
			<combobox visible="false"/>
			<bar visible="false"/>
		</NavigationBar>
		<Permalink path="modules/Permalink.swf">
			<settings extraButtonName="b" animation="slideUp"/>
		</Permalink>
		<ViewFinder path="modules/ViewFinder.swf"/>
		<Compass path="modules/Compass.swf"/>
		<DirectionFixer path="modules/DirectionFixer.swf"/>
		<ImageButton path="modules/ImageButton.swf">
			<buttons>
				<button id="logo" path="modules/images/logo.png" align="vertical:bottom" move="vertical:-5,horizontal:5">
					<![CDATA[http://www.diy-streetview.com/]]>
				</button>
			</buttons>
		</ImageButton>
	</modules>
	<actions>
		<action id="[hide]" content="DebugBubble.hideBubble()"/>
		<action id="togglePermalink" content="Permalink.toggleVisibility()"/>
		<action id="showCeiling" content="SaladoPlayer.jumpToView(NaN,90,NaN)"/>
		<action id="showFloor" content="SaladoPlayer.jumpToView(NaN,-90,NaN)"/>
		<action id="toggleDirectoryFixer" content="DirectionFixer.toggleVisibility()"/>
	</actions>
</SaladoPlayer>
