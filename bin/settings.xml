<?xml version="1.0" encoding="utf-8" ?>
<SaladoPlayer>				
	<global debug="false" firstPanorama="pano1" camera="maxFieldOfView:130,minFieldOfView:60"/>
	<panoramas>
		<panorama id="pano1" label="Shopping mall" path="panoramas/dz_shoppingmall/sm_f.xml">
			<hotspot id="hs1" position="pan:50.8,tilt:-41.5" path="hotspots/arrow.png" mouse="onClick:act1"/>
		</panorama>		
		<panorama id="pano2" label="Volleyball" path="panoramas/dz_volleyball/vb_f.xml" >
			<hotspot id="hs1" position="pan:49.8,tilt:-4.5,distance:1000" path="hotspots/arrow.png" mouse="onClick:act2"/>			
			<hotspot id="hs2" position="pan:-45.8,tilt:-4.5,distance:1000" path="hotspots/arrow.png" mouse="onClick:act3"/>
		</panorama>
		<panorama id="pano3" label="Park" path="panoramas/dz_park/park_f.xml">
			<hotspot id="hs1" position="pan:-8,distance:800" path="hotspots/ExampleHotspot.swf" mouse="onClick:act1"/>
		</panorama>
	</panoramas>
	<actions>
		<action id="act1" content="SaladoPlayer.loadPano(pano2)"/>
		<action id="act2" content="SaladoPlayer.loadPano(pano1)"/>
		<action id="act3" content="SaladoPlayer.loadPano(pano3)"/>
	</actions>
	<modules>
		<!--<ViewFinder path="modules/ViewFinder.swf"/>-->
		<NavigationBar path="modules/NavigationBar.swf">
			<cutout path="modules/images/buttons.png"/>
		</NavigationBar>
	</modules>
</SaladoPlayer>	