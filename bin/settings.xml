<?xml version="1.0" encoding="utf-8" ?>
<SaladoPlayer>				
	<global trace="debug:true" 
	showStatistics = "true"
	/>
	<panoramas>			 		
		<panorama id="pano2" label ="park2" path="panoramas/park2/park2_f.xml" 
			onEnter="act1" 
			onEnterSource="pano1:act2"  
			onTransitionEnd="act3" 
			onTransitionEndSource="pano1:act4" 
			onLeave="act5" 
			onLeaveTarget="pano1:act6"  
			>
			<hotspot id="hs1" position="tilt:0,pan:0" path="hotspots/shield.png" mouse="onClick:act7"/>
			<hotspot id="hs3" position="tilt:0,pan:40" path="hotspots/walk.png" mouse="onClick:act2"/>
			<hotspot id="hs4" position="tilt:0,pan:-20" path="hotspots/arrow.png" mouse="onClick:act3"/>
		</panorama>
		<panorama id="pano1" label="park1" path="panoramas/park1/park_f.xml" camera="pan:-40" >	
			<hotspot id="hs2" position="tilt:0,pan:0" path="hotspots/on.png" mouse="onClick:act1"/>		
		</panorama>
	</panoramas>		
	<actions>
		<action id="act1" content="SaladoPlayer.print(onenter)" />
		<action id="act2" content="SaladoPlayer.print(enter z pano1)" />
		<action id="act3" content="SaladoPlayer.print(transition end)" />
		<action id="act4" content="SaladoPlayer.print(transirion z pano1)" />
		<action id="act5" content="SaladoPlayer.print(onleave)" />
		<action id="act6" content="SaladoPlayer.print(onleave idzie do pano1)" />
		<action id="act7" content="SaladoPlayer.print()" />
	</actions>
	<modules>
		<ViewFinder path="modules/ViewFinder.swf"/>
		<NavigationBar path="modules/NavigationBar.swf"/>
		<ExampleModule path="modules/ExampleModule.swf">			
			<settings numberValue="-10.1" booleanValue="false" arrayValue="[value1,value2]" stringValue="something"/>
			<someParent>
				<someChild id="child1">
					<someGrandchild name="Joe" isMale="true" age="12" pets="[dog,fish,parrot]"/>
					<someGrandchild name="Bob" isMale="true" age="8" pets="[]"/>
				</someChild>
				<someChild id="child2">
					<someGrandchild name="Kate" isMale="false" age="13" pets="[cat]"/>
				</someChild>
			</someParent>
		</ExampleModule>
	</modules>
</SaladoPlayer>	