<?xml version="1.0" encoding="utf-8" ?>
<SaladoPlayer>				
	<global showStatistics="false"	trace="debug:true"  firstPanorama="pano2"/>
	<panoramas>			 				
		<panorama id="pano1" label="Park in winter" path="panoramas/park1/park_f.xml" camera="pan:-60" >	
			<hotspot id="hs2" position="tilt:5,pan:10" path="hotspots/arrow.png" mouse="onClick:act1"/>		
		</panorama>
		<panorama id="pano2" label ="Park in summer" path="panoramas/park2/park2_f.xml" >			
			<hotspot id="hs4" position="tilt:0,pan:-20" path="hotspots/arrow.png" mouse="onClick:act2"/>
		</panorama>		
	</panoramas>		
	<actions>
		<action id="act1" content="SaladoPlayer.loadPano(pano2)" />		
		<action id="act2" content="SaladoPlayer.loadPano(pano1)" />		
	</actions>
	<modules>				
		<NavigationBar path="modules/NavigationBar.swf"/>		
	</modules>
</SaladoPlayer>	