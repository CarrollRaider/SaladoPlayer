<?xml version="1.0" encoding="utf-8" ?>
<SaladoPlayer>				
	<global trace="debug:true" showStatistics = "true" firstPanorama="pano1" camera="pan:180"/>
	<panoramas>			 		
		<panorama id="pano1" label="Park in winter" path="panoramas/park1/park_f.xml" camera="pan:-60,fieldOfView:150" >	
			<hotspot id="hs1" position="tilt:10,pan:10,distance:300" path="hotspots/arrow.png" mouse="onClick:act1,onOver:act2"/>
		</panorama>		
		<panorama id="pano2" label ="Park in summer" path="panoramas/park2/park2_f.xml"  camera="fieldOfView:90"
			onEnter="act3" 
			onEnterSource="pano1:act4"  
			onTransitionEnd="act5" 
			onTransitionEndSource="pano1:act6" 
			onLeave="act7" 
			onLeaveTarget="pano1:act8"  
		>			
			<hotspot id="hs1" position="tilt:0,pan:-20" path="hotspots/arrow.png" mouse="onClick:act3"/>
		</panorama>		
	</panoramas>		
	<actions>
		<action id="act1" content="ExampleModule.echoArray([string1,string2]); SaladoPlayer.print(Just-printed-array)" />
		<action id="act2" content="SaladoPlayer.print(mouse-over-hs1)" />
		<action id="act3" content="SaladoPlayer.print(action3)" />
		<action id="act4" content="SaladoPlayer.print(action4)" />
		<action id="act5" content="SaladoPlayer.print(action5)" />
		<action id="act6" content="SaladoPlayer.print(action6)" />
		<action id="act7" content="SaladoPlayer.print(action7)" />
		<action id="act8" content="SaladoPlayer.print(action8)" />
	</actions>
	<modules>		
		<ViewFinder path="modules/ViewFinder.swf"/>
		<NavigationBar path="modules/NavigationBar.swf"/>
		<ExampleModule path="modules/ExampleModule.swf">
			<settings numberValue="-10.1" booleanValue="false" arrayValue="[value1,value2]" stringValue="something"/>
			<someParent>
				<someChild id="child1">
					<someGrandchild name="Joe" isMale="true" age="12" pets="[dog,fish,parrot]"/>
					<someGrandchild name="Bob" isMale="true" age="8" pets="[]"/>
				</someChild>
				<someChild id="child2">
					<someGrandchild name="Kate" isMale="false" age="13" pets="[cat]"/>
				</someChild>
			</someParent>
		</ExampleModule>
	</modules>
</SaladoPlayer>	