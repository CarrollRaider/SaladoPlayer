<?xml version="1.0" encoding="utf-8"?>
<!--
	onEnter takes value of action id that is executed when given panorama is entered
	
	http://panozona.com/wiki/SaladoPlayer:Configuration
-->
<SaladoPlayer>
	<global debug="true">
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="checkerGreen" path="~panoramas/dz_checker_green/checker_green_f.xml" onEnter="printWelcomeGreen">
			<image id="gc_arrowBlue" path="~hotspots/images/arrow_blue.png" mouse="onClick:loadBlueChecker"/>
		</panorama>
		<panorama id="checkerBlue" path="~panoramas/dz_checker_blue/checker_blue_f.xml" onEnter="printWelcomeBlue">
			<image id="bc_arrowGreen" path="~hotspots/images/arrow_green.png" mouse="onClick:loadcheckerGreen"/>
		</panorama>
	</panoramas>
	<actions>
		<action id="loadBlueChecker" content="SaladoPlayer.loadPano(checkerBlue)"/>
		<action id="loadcheckerGreen" content="SaladoPlayer.loadPano(checkerGreen)"/>
		<action id="printWelcomeGreen" content="SaladoPlayer.print(Welcome in green checker)"/>
		<action id="printWelcomeBlue" content="SaladoPlayer.print(Welcome in blue checker)"/>
	</actions>
</SaladoPlayer>