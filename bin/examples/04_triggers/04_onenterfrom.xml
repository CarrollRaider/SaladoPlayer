<?xml version="1.0" encoding="utf-8"?>
<!--
	onEnterFrom allows assignment of actions executed when entering from given panorama. for instance: in panorama
	greenChecker onEnterFrom="blueChecker:printGreenFromBlue,redChecker:printGreenFromRed means that when entering 
	from panotrama blueChecker to panorama greenChecker, action printGreenFromBlue is executed, similar for redChecker.
	
	http://panozona.com/wiki/SaladoPlayer:Configuration
-->
<SaladoPlayer>
	<global debug="true">
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml" onEnterFrom="blueChecker:printGreenFromBlue,redChecker:printGreenFromRed">
			<image id="gc_RedArrow" path="~hotspots/images/red_arrow.png" location="pan:-10" mouse="onClick:loadBlueChecker"/>
			<image id="gc_BlueArrow" path="~hotspots/images/blue_arrow.png" location="pan:10" mouse="onClick:loadBlueChecker"/>
		</panorama>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml" onEnterFrom="greenChecker:printBlueFromGreen,redChecker:printBlueFromRed">
			<image id="bc_RedArrow" path="~hotspots/images/red_arrow.png" location="pan:-10" mouse="onClick:loadRedChecker"/>
			<image id="bc_GreenArrow" path="~hotspots/images/green_arrow.png" location="pan:10" mouse="onClick:loadGreenChecker"/>
		</panorama>
		<panorama id="redChecker" path="~panoramas/dz_red_check/red_check_f.xml" onEnterFrom="greenChecker:printRedFromGreen,blueChecker:printRedFromBlue">
			<image id="rc_BlueArrow" path="~hotspots/images/blue_arrow.png" location="pan:-10" mouse="onClick:loadBlueChecker"/>
			<image id="rc_GreenArrow" path="~hotspots/images/green_arrow.png" location="pan:10" mouse="onClick:loadGreenChecker"/>
		</panorama>
	</panoramas>
	<actions>
		<action id="loadGreenChecker" content="SaladoPlayer.loadPano(greenChecker)"/>
		<action id="loadBlueChecker" content="SaladoPlayer.loadPano(blueChecker)"/>
		<action id="loadRedChecker" content="SaladoPlayer.loadPano(redChecker)"/>
		<action id="printGreenFromBlue" content="SaladoPlayer.print(Welcome in green checker from blue one)"/>
		<action id="printGreenFromRed" content="SaladoPlayer.print(Welcome in green checker from red one)"/>
		<action id="printBlueFromGreen" content="SaladoPlayer.print(Welcome in blue checker from green one)"/>
		<action id="printBlueFromRed" content="SaladoPlayer.print(Welcome in blue checker from red one)"/>
		<action id="printRedFromGreen" content="SaladoPlayer.print(Welcome in red checker from green one)"/>
		<action id="printRedFromBlue" content="SaladoPlayer.print(Welcome in red checker from blue one)"/>
	</actions>
</SaladoPlayer>