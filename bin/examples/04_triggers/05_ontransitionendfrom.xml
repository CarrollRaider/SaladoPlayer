<?xml version="1.0" encoding="utf-8"?>
<!--
	same as described in 05_onenterfrom but action is executed when transition is finished
	
	http://panozona.com/wiki/SaladoPlayer:Configuration
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="panoramas/dz_green_check/green_check_f.xml" onTransitionEndFrom="blueChecker:printGreenFromBlue,redChecker:printGreenFromRed">
			<image id="gcBlueArrow" path="hotspots/images/blue_arrow.png" location="pan:10" mouse="onClick:loadBlueCheck"/>
			<image id="gcRedArrow" path="hotspots/images/red_arrow.png" location="pan:-10" mouse="onClick:loadBlueCheck"/>
		</panorama>
		<panorama id="blueChecker" path="panoramas/dz_blue_check/blue_check_f.xml" onTransitionEndFrom="greenChecker:printBlueFromGreen,redChecker:printBlueFromRed">
			<image id="bcGreenArrow" path="hotspots/images/green_arrow.png" location="pan:10" mouse="onClick:loadGreenCheck"/>
			<image id="bcRedArrow" path="hotspots/images/red_arrow.png" location="pan:-10" mouse="onClick:loadRedCheck"/>
		</panorama>
		<panorama id="redChecker" path="panoramas/dz_red_check/red_check_f.xml" onTransitionEndFrom="greenChecker:printRedFromGreen,blueChecker:printRedFromBlue">
			<image id="rcGreenArrow" path="hotspots/images/green_arrow.png" location="pan:10" mouse="onClick:loadGreenCheck"/>
			<image id="rcBlueArrow" path="hotspots/images/blue_arrow.png" location="pan:-10" mouse="onClick:loadBlueCheck"/>
		</panorama>
	</panoramas>
	<actions>
		<action id="loadGreenCheck" content="SaladoPlayer.loadPano(greenChecker)"/>
		<action id="loadBlueCheck" content="SaladoPlayer.loadPano(blueChecker)"/>
		<action id="loadRedCheck" content="SaladoPlayer.loadPano(redChecker)"/>
		<action id="printGreenFromBlue" content="SaladoPlayer.print(Welcome in green checker from blue one)"/>
		<action id="printGreenFromRed" content="SaladoPlayer.print(Welcome in green checker from red one)"/>
		<action id="printBlueFromGreen" content="SaladoPlayer.print(Welcome in blue checker from green one)"/>
		<action id="printBlueFromRed" content="SaladoPlayer.print(Welcome in blue checker from red one)"/>
		<action id="printRedFromGreen" content="SaladoPlayer.print(Welcome in red checker from green one)"/>
		<action id="printRedFromBlue" content="SaladoPlayer.print(Welcome in red checker from blue one)"/>
	</actions>
</SaladoPlayer>