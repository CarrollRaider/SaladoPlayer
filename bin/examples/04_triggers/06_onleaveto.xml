<?xml version="1.0" encoding="utf-8"?>
<!--
	onLeaveTo allows assignment of actions executed when leaving to given panorama
	for instance: in panorama greenChecker onLeave to="blueChecker:printGreenToBlue,redChecker:printGreenToRed 
	means that loading panotrama blueChecker while being in greenChecker couses action printGreenToBlue to be executed,
	similar for redChecker
	
	http://panozona.com/wiki/SaladoPlayer:Configuration
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml" onLeaveTo="blueChecker:printGreenToBlue,redChecker:printGreenToRed">
			<image id="gcBlueArrow" path="~hotspots/images/blue_arrow.png" location="pan:10" mouse="onClick:loadBlueCheck"/>
			<image id="gcRedArrow" path="~hotspots/images/red_arrow.png" location="pan:-10" mouse="onClick:loadBlueCheck"/>
		</panorama>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml" onLeaveTo="greenChecker:printBlueToGreen,redChecker:printBlueToRed">
			<image id="bcGreenArrow" path="~hotspots/images/green_arrow.png" location="pan:10" mouse="onClick:loadGreenCheck"/>
			<image id="bcRedArrow" path="~hotspots/images/red_arrow.png" location="pan:-10" mouse="onClick:loadRedCheck"/>
		</panorama>
		<panorama id="redChecker" path="~panoramas/dz_red_check/red_check_f.xml" onLeaveTo="greenChecker:printRedToGreen,blueChecker:printRedToBlue">
			<image id="rcGreenArrow" path="~hotspots/images/green_arrow.png" location="pan:10" mouse="onClick:loadGreenCheck"/>
			<image id="rcBlueArrow" path="~hotspots/images/blue_arrow.png" location="pan:-10" mouse="onClick:loadBlueCheck"/>
		</panorama>
	</panoramas>
	<actions>
		<action id="loadGreenCheck" content="SaladoPlayer.loadPano(greenChecker)"/>
		<action id="loadBlueCheck" content="SaladoPlayer.loadPano(blueChecker)"/>
		<action id="loadRedCheck" content="SaladoPlayer.loadPano(redChecker)"/>
		<action id="printGreenToBlue" content="SaladoPlayer.print(Green checker says goodbeye have fun in blue one)"/>
		<action id="printGreenToRed" content="SaladoPlayer.print(Green checker says goodbeye have fun in red one)"/>
		<action id="printBlueToGreen" content="SaladoPlayer.print(Blue checker says goodbeye have fun in green one)"/>
		<action id="printBlueToRed" content="SaladoPlayer.print(Blue checker says goodbeye have fun in red one)"/>
		<action id="printRedToGreen" content="SaladoPlayer.print(Red checker says goodbeye have fun in blue one)"/>
		<action id="printRedToBlue" content="SaladoPlayer.print(Red checker says goodbeye have fun in red one)"/>
	</actions>
</SaladoPlayer>