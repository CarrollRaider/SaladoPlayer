<!-- 
	
This is example for using hotspots
	
	- hotspot "id" is mandatory it should be unique among other hotspots in single panorama
	- "path" is mandatory it points to image file or to swf hotspot
	- mouse interaction couses executing action of specific id
	- action calls function of specific owner (can be SaladoPlayer or some module) with specific arguments
	- use ViewFinder for determining pan and tilt of hotspots
	
-->
<?xml version="1.0" encoding="utf-8"?>
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="pano1" label="Park" path="panoramas/dz_park/park_f.xml">
			<hotspot id="hs1" position="pan:0,tilt:0" path="hotspots/arrow.png" mouse="onClick:act1"/>
		</panorama>	
		<panorama id="pano2" label="Shopping mall" path="panoramas/dz_shoppingmall/sm_f.xml">
			<hotspot id="hs2" position="pan:90,tilt:5,distance:800" path="hotspots/arrow.png" mouse="onClick:act2"/>
		</panorama>	
	</panoramas>
	<actions>
		<action id="act1" content="SaladoPlayer.loadPano(pano2)"/>
		<action id="act2" content="SaladoPlayer.loadPano(pano1)"/>		
	</actions>
	<modules>
		<ViewFinder path="modules/ViewFinder.swf"/>
		<NavigationBar path="modules/NavigationBar.swf">
			<cutout path="modules/images/buttons.png"/>			
		</NavigationBar>
	</modules>	
</SaladoPlayer>