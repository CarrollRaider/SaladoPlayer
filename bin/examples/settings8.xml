<!-- 
	
This is simple example for advanced using of loading events

	- here you can execute actions depending on your virtual tour direction
	- here action "act1" will be called only when entering to pano1 from pano2 
	- you can have many dependencies i.e onEnterSource="pano2:act1,pano3:act2,pano4:act3"

-->
<?xml version="1.0" encoding="utf-8" ?>
<SaladoPlayer>
	<global debug="true" trace="initialVisibility:true" />
	<panoramas>
		<panorama id="pano1" label="Shopping mall" path="panoramas/dz_shoppingmall/sm_f.xml" onEnterSource="pano2:act1" onTransitionEndSource="pano2:act2" />
		<panorama id="pano2" label="Park" path="panoramas/dz_park/park_f.xml" onLeaveTarget="pano1:act3" />
	</panoramas>
	<actions>
		<action id="act1" content="SaladoPlayer.print(Welcome in pano1)"/>
		<action id="act2" content="SaladoPlayer.print(pano1 finished transition)"/>
		<action id="act3" content="SaladoPlayer.print(Goodby from pano2)"/>
	</actions>
	<modules>
		<NavigationBar path="modules/NavigationBar.swf">
			<cutout path="modules/images/buttons.png"/>			
		</NavigationBar>
	</modules>	
</SaladoPlayer>