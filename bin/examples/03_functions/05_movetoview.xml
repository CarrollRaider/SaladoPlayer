<?xml version="1.0" encoding="utf-8" ?>
<!--
	This function is very simillar to one described in jumptoview example.
	- moveToView moves with speed of 20 degrees per second, using transition function Linear.easeNone
	- moveToViewThen executes action when it has finished
	- advancedMoveToView is same as moveToView, but allows setting speed and transition function
	- advancedMoveToViewThen executes action when it has finished
	For avaible transition functions see: http://panozona.com/wiki/SaladoPlayer:Data_types
	
	see: http://panozona.com/wiki/SaladoPlayer:Exposed_functions
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="greenCheck" path="panoramas/dz_green_check/green_check_f.xml">
			<image id="blueArrow" path="hotspots/images/blue_arrow.png" location="pan:0" mouse="onClick:moveToYellowArrow"/>
			<image id="greenArrow" path="hotspots/images/green_arrow.png" location="pan:180" mouse="onClick:moveToRedArrowThen"/>
			<image id="redArrow" path="hotspots/images/red_arrow.png" location="tilt:-85" mouse="onClick:advancedMoveToBlueArrow"/>
			<image id="yellowArrow" path="hotspots/images/yellow_arrow.png" location="tilt:85" mouse="onClick:advancedMoveToGreenArrowThen"/>
		</panorama>
	</panoramas>
	<modules>
		<ViewFinder path="modules/ViewFinder-1.0.swf"/>
	</modules>
	<actions>
		<action id="moveToYellowArrow" content="SaladoPlayer.moveToView(NaN,85,30)"/>
		<action id="moveToRedArrowThen" content="SaladoPlayer.moveToViewThen(NaN,-85,90,printZona)"/>
		<action id="advancedMoveToBlueArrow" content="SaladoPlayer.advancedMoveToView(0,0,120,30,Expo.easeIn)"/>
		<action id="advancedMoveToGreenArrowThen" content="SaladoPlayer.advancedMoveToViewThen(180,0,NaN,30,Expo.easeIn,printPano)"/>
		
		<action id="printPano" content="SaladoPlayer.print(Pano)"/>
		<action id="printZona" content="SaladoPlayer.print(Zona)"/>
	</actions>
</SaladoPlayer>