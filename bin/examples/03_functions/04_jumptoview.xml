<?xml version="1.0" encoding="utf-8" ?>
<!-- 
	Module ViewFinder displays current camera pan tilt and field of view, represented with white dot.
	jumpToView takes 3 arguments: pan, tilt and field of view. Any of these arguments can be NaN (Not a Number)
	which means that new view will take current camera value. For instance: When camera is looking -90 pan (East)
	calling jumpToView(NaN,30,120) will result in -90 pan, 30 tilt and 120 field of view.
	
	http://panozona.com/wiki/SaladoPlayer:Exposed_functions
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenCheck" path="panoramas/dz_green_check/green_check_f.xml">
			<image id="blueArrow" path="hotspots/images/blue_arrow.png" location="pan:0" mouse="onClick:jumpToYellowArrow"/>
			<image id="greenArrow" path="hotspots/images/green_arrow.png" location="pan:180" mouse="onClick:jumpToRedArrow"/>
			<image id="redArrow" path="hotspots/images/red_arrow.png" location="tilt:-85" mouse="onClick:jumpToBlueArrow"/>
			<image id="yellowArrow" path="hotspots/images/yellow_arrow.png" location="tilt:85" mouse="onClick:jumpToGreenArrow"/>
		</panorama>
	</panoramas>
	<modules>
		<ViewFinder path="modules/ViewFinder-1.0.swf"/>
	</modules>
	<actions>
		<action id="jumpToYellowArrow" content="SaladoPlayer.jumpToView(NaN,85,30)"/>
		<action id="jumpToRedArrow" content="SaladoPlayer.jumpToView(NaN,-85,90)"/>
		<action id="jumpToBlueArrow" content="SaladoPlayer.jumpToView(0,0,120)"/>
		<action id="jumpToGreenArrow" content="SaladoPlayer.jumpToView(180,0,NaN)"/>
	</actions>
</SaladoPlayer>