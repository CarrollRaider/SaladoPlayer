<?xml version="1.0" encoding="utf-8" ?>
<!--
	Clicking on hotspots results in loading new panoramas.
	
	http://panozona.com/wiki/SaladoPlayer:Exposed_functions
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerRed" path="~panoramas/dz_checker_red/checker_red_f.xml">
			<image id="rc_arrowGreen" path="~hotspots/images/arrow_green.png" location="pan:-10" mouse="onClick:loadcheckerGreen"/>
			<image id="rc_arrowBlue" path="~hotspots/images/arrow_blue.png" location="pan:10" mouse="onClick:loadBlueChecker"/>
		</panorama>
		<panorama id="checkerGreen" path="~panoramas/dz_checker_green/checker_green_f.xml">
			<image id="gc_arrowBlue" path="~hotspots/images/arrow_blue.png" location="pan:-10" mouse="onClick:loadBlueChecker"/>
			<image id="gc_arrowRed" path="~hotspots/images/arrow_red.png" location="pan:10" mouse="onClick:loadRedChecker"/>
		</panorama>
		<panorama id="checkerBlue" path="~panoramas/dz_checker_blue/checker_blue_f.xml">
			<image id="bc_arrowGreen" path="~hotspots/images/arrow_green.png" location="pan:-10" mouse="onClick:loadcheckerGreen"/>
			<image id="bc_arrowRed" path="~hotspots/images/arrow_red.png" location="pan:10" mouse="onClick:loadRedChecker"/>
		</panorama>
	</panoramas>
	<actions>
		<action id="loadRedChecker" content="SaladoPlayer.loadPano(checkerRed)"/>
		<action id="loadBlueChecker" content="SaladoPlayer.loadPano(checkerBlue)"/>
		<action id="loadcheckerGreen" content="SaladoPlayer.loadPano(checkerGreen)"/>
	</actions>
</SaladoPlayer>