<?xml version="1.0" encoding="utf-8" ?>
<SaladoPlayer>
	<global debug="true" autorotation="enabled:false" transition="time:0" firstPanorama="pano0">
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="pano0" label="park infobubble" path="panoramas/dz_park/park_f.xml">
			<hotspot id="hs1" position="pan:20" path="hotspots/arrow.png" mouse="onOver:bubShowb1,onOut:bubHide"/>
			hotspot id="hs2" position="pan:-20" path="hotspots/arrow.png" mouse="onOver:bubShowb2,onOut:bubHide"/>
			<hotspot id="hs1" position="pan:90,tilt:0" path="hotspots/arrow.png" mouse="onClick:hs1Clicked"/>
			<hotspot id="hs2" position="pan:-0,tilt:-10" path="hotspots/arrow.png" mouse="onClick:hs2Clicked"/>
		</panorama>
		<panorama id="pano1" label="Volleyball" path="panoramas/dz_volleyball/vb_f.xml"/>
		<panorama id="pano2" label="Park" path="panoramas/dz_park/park_f.xml"/>
		<panorama id="pano3" label="Park single tile" path="panoramas/dz_park_fast/park_f.xml"/>
	</panoramas>
	<actions>		
		<action id="mapToggle" content="ImageMap.toggleVisibility()" />
		<action id="hs1Clicked" content="SaladoPlayer.moveToHotspot(hs2)" />
		<action id="hs2Clicked" content="SaladoPlayer.moveToHotspot(hs1)" />
		<action id="mapOpened" content="NavigationBar.setExtraButtonActive(b,true)"/>
		<action id="mapClosed" content="NavigationBar.setExtraButtonActive(b,false)"/>
		<action id="bubShowb1" content="InfoBubble.showBubble(b1)"/>
		<action id="bubShowb2" content="InfoBubble.showBubble(b2)" />
		<action id="bubHide" content="InfoBubble.hideBubble()"/>
		<action id="ass" content="SaladoPlayer.print([asss])"/>
	</actions>
	<modules>
		<InfoBubble path="modules/InfoBubble.swf">
			<bubbles>
				<bubble id="b1" path="modules/bubbles/bubble1.png"/>
				<bubble id="b2" path="modules/bubbles/bubble1.png"/>
			</bubbles>
		</InfoBubble>
		<ImageMap path="modules/ImageMap.swf">
			<window open="false" transitionType="fade" onOpen="mapOpened" onClose="mapClosed" alpha="0.8"/>
			<viewer moveEnabled="true" dragEnabled="true" zoomEnabled="true"/>
			<maps>
				<map id="map1" path="modules/maps/test.jpg">
					<waypoint target="pano1" position="x:150,y:100" mouse="onOver:bubShowb1,onOut:bubHide" />
					<waypoint target="pano2" position="x:900,y:200"/>
					<waypoint target="pano3" position="x:500,y:300"/>
				</map>
			</maps>
		</ImageMap>		
		<NavigationBar path="modules/NavigationBar.swf">
			<buttons path="modules/images/buttons_30x30_blue.png">
				<button name="autorotation" visible="false"/>
				<extraButton name="b" action="mapToggle"/>
			</buttons>
			<combobox visible="true"/>
		</NavigationBar>
	</modules>
</SaladoPlayer>