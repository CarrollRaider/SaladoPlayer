<?xml version="1.0" encoding="utf-8"?>
<!--
	You can configure tweens on bubbles show/hide. By using proper tweens, you can achieve
	effect of delay between calling "showBubble" and appearing of bubble itself.
	
	http://panozona.com/wiki/Module:InfoBubble
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="yellowCheck" path="~panoramas/dz_yellow_check/yellow_check_f.xml">
			<image id="blueArrow" location="pan:0" path="~hotspots/images/blue_arrow.png" mouse="onOver:showBubbleBlue,onOut:hideBubble"/>
		</panorama>
	</panoramas>
	<modules>
		<InfoBubble path="~modules/InfoBubble-1.1.swf">
			<bubbles showTween="transition:Expo.easeIn,time:0.75" hideTween="transition:Cubic.easeIn,time:0.25">
				<bubble id="bubbleBlue" path="~modules/images/infobubble/blue.jpg"/>
			</bubbles>
		</InfoBubble>
	</modules>
	<actions>
		<action id="showBubbleBlue" content="InfoBubble.showBubble(bubbleBlue)"/>
		<action id="hideBubble" content="InfoBubble.hideBubble()"/>
	</actions>
</SaladoPlayer>