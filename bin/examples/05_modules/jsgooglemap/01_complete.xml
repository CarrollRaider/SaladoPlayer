<?xml version="1.0" encoding="utf-8"?>
<!--
	http://panozona.com/wiki/Module:JSGoogleMap
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml">
			<image id="gc_redArrow" path="~hotspots/images/red_arrow.png" mouse="onClick:loadRedChecker"/>
		</panorama>
		<panorama id="redChecker" path="~panoramas/dz_red_check/red_check_f.xml">
			<image id="rc_greenArrow" path="~hotspots/images/green_arrow.png" mouse="onClick:loadGreenChecker"/>
		</panorama>
	</panoramas>
	<modules>
		<ButtonBar path="~modules/ButtonBar-1.2.swf">
			<bar visible="false"/>
			<buttons path="~modules/images/buttonbar/buttons/buttons_25x25_green.png">
				<extraButton name="b" action="jsgooglemapToggle"/>
			</buttons>
		</ButtonBar>
		<JSGoogleMap path="~modules/JSGoogleMap-1.0.swf">
			<settings open="true" onOpen="jsgooglemapOnOpen" onClose="jsgooglemapOnClose"/>
			<waypoints markerOn="~modules/images/jsgooglemap/marker_on.png" markerOff="~modules/images/jsgooglemap/marker_off.png">
				<waypoint target="greenChecker" geolocation="latitude:46.44,longitude:11.08" label="Green checker"/>
				<waypoint target="redChecker" geolocation="latitude:47.04,longitude:11.14" label="Red checker"/>
			</waypoints>
			<tracks>
				<track path="[http://panozona.com/saladoplayer/kml/google.kmz]"/>
				<track path="[http://panozona.com/saladoplayer/kml/map.kmz]"/>
			</tracks>
		</JSGoogleMap>
	</modules>
	<actions>
		<action id="jsgooglemapToggle" content="JSGoogleMap.toggleOpen()" />
		<action id="jsgooglemapOnOpen" content="ButtonBar.setActive(b,true)" />
		<action id="jsgooglemapOnClose" content="ButtonBar.setActive(b,false)" />
		<action id="loadRedChecker" content="SaladoPlayer.loadPano(redChecker)"/>
		<action id="loadGreenChecker" content="SaladoPlayer.loadPano(greenChecker)"/>
	</actions>
</SaladoPlayer>