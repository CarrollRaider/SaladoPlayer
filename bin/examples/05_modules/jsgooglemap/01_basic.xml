<?xml version="1.0" encoding="utf-8"?>
<!--
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml">
			<image id="redArrow" path="~hotspots/images/red_arrow.png" mouse="onClick:loadRedChecker"/>
		</panorama>
		<panorama id="redChecker" path="~panoramas/dz_red_check/red_check_f.xml">
			<image id="greenArrow" path="~hotspots/images/green_arrow.png" mouse="onClick:loadGreenChecker"/>
		</panorama>
	</panoramas>
	<modules>
		<ButtonBar path="~modules/ButtonBar-1.2.swf">
			<bar visible="false"/>
			<buttons path="~modules/images/buttonbar/buttons/buttons_25x25_green.png">
				<extraButton name="b" action="jsgooglemapToggle"/>
			</buttons>
		</ButtonBar>
		<JSGoogleMap path="~modules/JSGoogleMap-1.0.swf">
			<settings open="true" onOpen="jsgooglemapOnOpen" onClose="jsgooglemapOnClose"/>
			<waypoints markerOn="~modules/images/jsgooglemap/marker_on.png" markerOff="~modules/images/jsgooglemap/marker_off.png">
				<waypoint target="greenChecker" geolocation="latitude:46.44,longitude:11.08"/>
				<waypoint target="redChecker" geolocation="latitude:47.04,longitude:11.14"/>
			</waypoints>
		</JSGoogleMap>
	</modules>
	<actions>
		<action id="jsgooglemapToggle" content="JSGoogleMap.toggleOpen()" />
		<action id="jsgooglemapOnOpen" content="ButtonBar.setExtraButtonActive(b,true)" />
		<action id="jsgooglemapOnClose" content="ButtonBar.setExtraButtonActive(b,false)" />
		<action id="loadRedChecker" content="SaladoPlayer.loadPano(redChecker)"/>
		<action id="loadGreenChecker" content="SaladoPlayer.loadPano(greenChecker)"/>
	</actions>
</SaladoPlayer>