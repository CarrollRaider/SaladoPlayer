<?xml version="1.0" encoding="utf-8" ?>
<!--
	You can position text box inside panorama window, so it won't get in the way
	of other elements. You can also hide white dot in the middle.
	
	http://panozona.com/wiki/Module:ViewFinder
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml"/>
	</panoramas>
	<modules>
		<ViewFinder path="~modules/ViewFinder-1.1.swf">
			<settings align="vertical:bottom" move="vertical:-30,horizontal:10" showDot="false"/>
		</ViewFinder>
	</modules>
</SaladoPlayer>