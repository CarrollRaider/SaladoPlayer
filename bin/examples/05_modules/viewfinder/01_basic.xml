<?xml version="1.0" encoding="utf-8" ?>
<!--
	ViewFinder can be added into SaladoPlayer with single line of XML code.
	Use it to determine hotspots position and limits of camera view.
	
	http://panozona.com/wiki/Module:ViewFinder
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="redChecker" path="~panoramas/dz_red_check/red_check_f.xml"/>
	</panoramas>
	<modules>
		<ViewFinder path="~modules/ViewFinder-1.1.swf"/>
	</modules>
</SaladoPlayer>