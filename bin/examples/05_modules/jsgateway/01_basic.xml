<?xml version="1.0" encoding="utf-8" ?>
<!--
	http://panozona.com/wiki/Module:JSGateway
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="greenCheck" path="panoramas/dz_green_check/green_check_f.xml">
			<image id="greenArrow" path="hotspots/images/green_arrow.png" location="pan:30" mouse="onClick:saladoPlayerToJavascript"/>
		</panorama>
	</panoramas>
	<modules>
		<JSGateway path="modules/JSGateway-1.0.swf">
			<jsfunctions>
				<jsfunction id="js1" name="someJavaScriptFunction" text="hello"/>
			</jsfunctions>
		</JSGateway>
	</modules>
	<actions>
		<action id="saladoPlayerToJavascript" content="JSGateway.run(js1)"/>
		<action id="javaScriptToSaladoPlayer" content="SaladoPlayer.print(got called from javascript)"/>
	</actions>
</SaladoPlayer>