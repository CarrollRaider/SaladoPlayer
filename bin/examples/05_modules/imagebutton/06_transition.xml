<?xml version="1.0" encoding="utf-8"?>
<!--
	You can add fade or sliding effects when opening/closing button. By default transition type is "fade".
	
	http://panozona.com/wiki/Module:ImageButton
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml">
			<image id="arrow1" path="~hotspots/images/yellow_arrow.png" location="pan:-20,tilt:10" mouse="onClick:toggleOpenLogo1"/>
			<image id="arrow2" path="~hotspots/images/yellow_arrow.png" location="pan:20,tilt:10" mouse="onClick:toggleOpenLogo2"/>
			<image id="arrow3" path="~hotspots/images/yellow_arrow.png" location="pan:-20,tilt:-10" mouse="onClick:toggleOpenLogo3"/>
			<image id="arrow4" path="~hotspots/images/yellow_arrow.png" location="pan:20,tilt:-10" mouse="onClick:toggleOpenLogo4"/>
		</panorama>
	</panoramas>
	<modules>
		<ImageButton path="~modules/ImageButton-1.2.swf">
			<buttons>
				<button id="logo1" path="~media/images/misc/panozona_logo.png" move="horizontal:30,vertical:30" transition="type:slideLeft"/>
				<button id="logo2" path="~media/images/misc/panozona_logo.png" align="horizontal:right" move="horizontal:-30,vertical:30" transition="type:slideUp"/>
				<button id="logo3" path="~media/images/misc/panozona_logo.png" align="vertical:bottom" move="horizontal:30,vertical:-30" transition="type:slideDown"/>
				<button id="logo4" path="~media/images/misc/panozona_logo.png" align="vertical:bottom,horizontal:right" move="horizontal:-30,vertical:-30" transition="type:slideRight"/>
			</buttons>
		</ImageButton>
	</modules>
	<actions>
		<action id="toggleOpenLogo1" content="ImageButton.toggleOpen(logo1)"/>
		<action id="toggleOpenLogo2" content="ImageButton.toggleOpen(logo2)"/>
		<action id="toggleOpenLogo3" content="ImageButton.toggleOpen(logo3)"/>
		<action id="toggleOpenLogo4" content="ImageButton.toggleOpen(logo4)"/>
	</actions>
</SaladoPlayer>