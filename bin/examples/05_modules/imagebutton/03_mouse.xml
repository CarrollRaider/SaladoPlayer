<?xml version="1.0" encoding="utf-8"?>
<!-- 
	Assign mouse events on interaction with each button. You can display content
	when mouse is hovering over button with other modules, like InfoBubble.
	
	http://panozona.com/wiki/Module:ImageButton
-->
<SaladoPlayer>
	<global debug="true">
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml"/>
	</panoramas>
	<modules>
		<ImageButton path="~modules/ImageButton-1.2.swf">
			<buttons>
				<button id="logo1" path="~media/images/misc/panozona_logo.png" mouse="onOver:printOver,onOut:printOut,onClick:printClick"/>
			</buttons>
		</ImageButton>
	</modules>
	<actions>
		<action id="printOver" content="SaladoPlayer.print(over)"/>
		<action id="printOut" content="SaladoPlayer.print(out)"/>
		<action id="printClick" content="SaladoPlayer.print(click)"/>
	</actions>
</SaladoPlayer>