<?xml version="1.0" encoding="utf-8"?>
<!-- 
	- use module to place images inside panorama window
	- setting "handcursor" to false couses that image is transparent for mouse when rotating panorama
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="panoramas/dz_green_check/green_check_f.xml"/>
	</panoramas>
	<modules>
		<ImageButton path="modules/ImageButton-1.0.swf">
			<buttons>
				<button id="button1" path="modules/images/panozona_logo.png" align="vertical:top" move="horizontal:30,vertical:30"/>
				<button id="button2" path="modules/images/panozona_logo.png" align="vertical:middle" move="horizontal:30,vertical:0"/>
				<button id="button3" handCursor="false" path="modules/images/panozona_logo.png" align="vertical:bottom" move="horizontal:30,vertical:-60"/>
			</buttons>
		</ImageButton>
	</modules>
</SaladoPlayer>