<?xml version="1.0" encoding="utf-8"?>
<!-- 
	Set tweens for open and close transitions. Parameters will apply both to slide
	and fade transitions. If you set time to 0, no transition effect will be applied.
	
	http://panozona.com/wiki/Module:ImageButton
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerGreen" path="~panoramas/dz_checker_green/checker_green_f.xml">
			<image id="arrowGreen" path="~hotspots/images/arrow_green.png" location="pan:-5,tilt:5" mouse="onClick:openLogo"/>
			<image id="arrowRed" path="~hotspots/images/arrow_red.png" location="pan:-5,tilt:-5" mouse="onClick:closeLogo"/>
			<image id="arrowYellow" path="~hotspots/images/arrow_yellow.png" location="pan:5" mouse="onClick:toggleOpenLogo"/>
		</panorama>
	</panoramas>
	<modules>
		<ImageButton path="~modules/ImageButton-1.2.swf">
			<buttons>
				<button id="logo1" path="~media/images/misc/panozona_logo.png" move="horizontal:30,vertical:30" open="false" transition="type:slideLeft" openTween="transition:Expo.easeIn,time:0.75" closeTween="transition:Expo.easeOut,time:0.75"/>
			</buttons>
		</ImageButton>
	</modules>
	<actions>
		<action id="openLogo" content="ImageButton.setOpen(logo1,true)"/>
		<action id="closeLogo" content="ImageButton.setOpen(logo1,false)"/>
		<action id="toggleOpenLogo" content="ImageButton.toggleOpen(logo1)"/>
	</actions>
</SaladoPlayer>