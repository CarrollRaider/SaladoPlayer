<?xml version="1.0" encoding="utf-8"?>
<!-- 
	You can assign different open/close tween times and functions.
	
	http://panozona.com/wiki/Module:ImageButton
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml">
			<image id="greenArrow" path="~hotspots/images/green_arrow.png" location="pan:-5,tilt:5" mouse="onClick:openLogo"/>
			<image id="redArrow" path="~hotspots/images/red_arrow.png" location="pan:-5,tilt:-5" mouse="onClick:closeLogo"/>
			<image id="yellowArrow" path="~hotspots/images/yellow_arrow.png" location="pan:5" mouse="onClick:toggleOpenLogo"/>
		</panorama>
	</panoramas>
	<modules>
		<ImageButton path="~modules/ImageButton-1.2.swf">
			<buttons>
				<button id="logo1" path="~modules/images/imagebutton/panozona_logo.png" move="horizontal:30,vertical:30" open="false" transition="type:slideLeft" openTween="transition:Expo.easeIn,time:0.75" closeTween="transition:Expo.easeOut,time:0.75"/>
			</buttons>
		</ImageButton>
	</modules>
	<actions>
		<action id="openLogo" content="ImageButton.setOpen(logo1,true)"/>
		<action id="closeLogo" content="ImageButton.setOpen(logo1,false)"/>
		<action id="toggleOpenLogo" content="ImageButton.toggleOpen(logo1)"/>
	</actions>
</SaladoPlayer>