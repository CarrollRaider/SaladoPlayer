<?xml version="1.0" encoding="utf-8"?>
<!-- 
	- you can assign custom mouse events to buttons
	- you can open/close buttons of given id
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="panoramas/dz_green_check/green_check_f.xml"/>
	</panoramas>
	<modules>
		<ImageButton path="modules/ImageButton-1.0.swf">
			<buttons>
				<button id="button1" path="modules/images/panozona_logo.png" align="vertical:top" move="horizontal:30,vertical:30" mouse="onClick:act1"/>
				<button id="button2" path="modules/images/panozona_logo.png" align="vertical:middle" move="horizontal:30,vertical:0" mouse="onClick:act2" openTween="transition:Cubic.easeInOut,time:0.75" closeTween="transition:Cubic.easeOut,time:0.75"/>
				<button id="button3" path="modules/images/panozona_logo.png" align="vertical:bottom" move="horizontal:30,vertical:-60" mouse="onClick:act3"/>
			</buttons>
		</ImageButton>
	</modules>
	<actions>
		<action id="act1" content="ImageButton.close(button2);ImageButton.open(button3)"/>
		<action id="act2" content="ImageButton.close(button3);ImageButton.open(button1)"/>
		<action id="act3" content="ImageButton.close(button1);ImageButton.open(button2)"/>
	</actions>
</SaladoPlayer>