<?xml version="1.0" encoding="utf-8" ?>
<!--
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml">
			<image id="bc_redArrow" path="~hotspots/images/red_arrow.png" location="pan:10" mouse="onClick:loadRedChecker"/>
		</panorama>
		<panorama id="redChecker" path="~panoramas/dz_red_check/red_check_f.xml">
			<image id="rc_blueArrow" path="~hotspots/images/blue_arrow.png" location="pan:10" mouse="onClick:loadBlueChecker"/>
		</panorama>
	</panoramas>
	<modules>
		<ViewFinder path="~modules/ViewFinder-1.1.swf"/>
		<PanoLink path="~modules/PanoLink-1.0.swf">
			<settings open="true" onOpen="onLinkOpen" onClose="onLinkClose"/>
		</PanoLink>
		<ImageButton path="~modules/ImageButton-1.1.swf">
			<buttons>
				<button id="buttonOn" path="~modules/images/imagebutton/on.png" align="vertical:top,horizontal:left" move="horizontal:30,vertical:30" mouse="onClick:linkClose"/>
				<button id="buttonOff" path="~modules/images/imagebutton/off.png" align="vertical:top,horizontal:left" move="horizontal:30,vertical:30" mouse="onClick:linkOpen"/>
			</buttons>
		</ImageButton>
	</modules>
	<actions>
		<action id="loadBlueChecker" content="SaladoPlayer.loadPano(blueChecker)"/>
		<action id="loadRedChecker" content="SaladoPlayer.loadPano(redChecker)"/>
		<action id="linkOpen" content="PanoLink.setOpen(true)"/>
		<action id="linkClose" content="PanoLink.setOpen(false)"/>
		<action id="onLinkOpen" content="ImageButton.close(buttonOff);ImageButton.open(buttonOn)"/>
		<action id="onLinkClose" content="ImageButton.open(buttonOff);ImageButton.close(buttonOn)"/>
	</actions>
</SaladoPlayer>