<?xml version="1.0" encoding="utf-8" ?>
<!--
	Module by default uses first track as current track. Track is looped by default.
	
	http://panozona.com/wiki/Module:BackgroundMusic
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="panoramas/dz_green_check/green_check_f.xml">
			<image id="gc_greenArrow" path="hotspots/images/green_arrow.png" location="pan:-10" mouse="onClick:playBackgroundMusic"/>
			<image id="gc_redArrow" path="hotspots/images/red_arrow.png" location="pan:10" mouse="onClick:stopBackgroundMusic"/>
			<image id="gc_arrowBlue" path="hotspots/images/blue_arrow.png" location="tilt:-10" mouse="onClick:toggleBackgroundMusic"/>
		</panorama>
	</panoramas>
	<modules>
		<BackgroundMusic path="modules/BackgroundMusic-1.1.swf">
			<settings play="true"/>
			<tracks>
				<track id="ip2" path="modules/sound/backgroundmusic/ip2.mp3" loop="false" next="MoVoX"/>
				<track id="MoVoX" path="modules/sound/backgroundmusic/czesc.mp3" loop="false" next="ip2"/>
			</tracks>
		</BackgroundMusic>
	</modules>
	<actions>
		<action id="playBackgroundMusic" content="BackgroundMusic.setPlay(true)"/>
		<action id="stopBackgroundMusic" content="BackgroundMusic.setPlay(false)"/>
		<action id="toggleBackgroundMusic" content="BackgroundMusic.togglePlay()"/>
	</actions>
</SaladoPlayer>