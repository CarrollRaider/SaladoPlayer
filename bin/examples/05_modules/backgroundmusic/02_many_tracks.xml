<?xml version="1.0" encoding="utf-8" ?>
<!--
	You can set different track to be played in different panoramas.
	BackgroundMusic has "current" track that is played untill music is entirely stopped
	or untill it is chaned to another track.
	
	http://panozona.com/wiki/Module:BackgroundMusic
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
		<panoramas firstOnEnter="playBackgroundMusic"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="panoramas/dz_green_check/green_check_f.xml" onEnter="setTrackVsadnik">
			<image id="gc_arrowBlue" path="hotspots/images/blue_arrow.png" mouse="onClick:loadBlueCheck"/>
		</panorama>
		<panorama id="blueChecker" path="panoramas/dz_blue_check/blue_check_f.xml" onEnter="setTrackMovox">
			<image id="bc_greenArrow" path="hotspots/images/green_arrow.png" mouse="onClick:loadGreenCheck"/>
		</panorama>
	</panoramas>
	<modules>
		<BackgroundMusic path="modules/BackgroundMusic-1.1.swf">
			<tracks>
				<track id="movox" path="modules/sound/backgroundmusic/MoVoX - Euphoria.mp3"/>
				<track id="vsadnik" path="modules/sound/backgroundmusic/Vsadnik - I Can Fly.mp3"/>
			</tracks>
		</BackgroundMusic>
	</modules>
	<actions>
		<action id="loadBlueCheck" content="SaladoPlayer.loadPano(blueChecker)"/>
		<action id="loadGreenCheck" content="SaladoPlayer.loadPano(greenChecker)"/>
		<action id="playBackgroundMusic" content="BackgroundMusic.setPlay(true)"/>
		<action id="setTrackMovox" content="BackgroundMusic.setTrack(movox)"/>
		<action id="setTrackVsadnik" content="BackgroundMusic.setTrack(vsadnik)"/>
	</actions>
</SaladoPlayer>