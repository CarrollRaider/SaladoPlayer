<?xml version="1.0" encoding="utf-8"?>
<!--
	Path in buttons node is mandatory, it points to the grid of buttons bitmaps.
	In order to remove button from bar, remove <button/> node form the bar.
	Order of button nodes determines order of buttons on the bar
	
	http://panozona.com/wiki/Module:ButtonBar
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml"/>
	</panoramas>
	<modules>
		<ButtonBar path="~modules/ButtonBar-1.2.swf">
			<bar color="#ff0000" visible="false" />
			<buttons path="~modules/images/buttonbar/buttons/hans_hermans_40x40.png">
				<button name="up"/>
				<button name="down"/>
				<button name="left"/>
				<button name="right"/>
				<button name="in"/>
				<button name="out"/>
				<button name="drag"/>
				<button name="autorotation"/>
				<button name="fullscreen"/>
			</buttons>
		</ButtonBar>
	</modules>
</SaladoPlayer>