<?xml version="1.0" encoding="utf-8"?>
<!--
	Point to image containig bitmaps grid with bitmaps for all buttons. You can choose from many such grids
	or you can easily create your own. Choose which ones of preconfigured standard buttons to display.
	Changing order of button nodes results in changing order in which buttons are displayed.
	
	http://panozona.com/wiki/Module:ButtonBar
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerYellow" path="~panoramas/dz_checker_yellow/checker_yellow_f.xml">
			<image id="yc_arrowBlue" path="~hotspots/images/arrow_blue.png"/>
		</panorama>
	</panoramas>
	<modules>
		<ButtonBar path="~modules/ButtonBar-1.2.swf">
			<buttons path="~modules/images/buttonbar/buttons_40x40_black.png">
				<button name="down"/>
				<button name="up"/>
				<button name="left"/>
				<button name="right"/>
				<button name="out"/>
				<button name="in"/>
				<button name="drag"/>
				<button name="hotspots"/>
				<button name="autorotation"/>
				<button name="fullscreen"/>
			</buttons>
		</ButtonBar>
	</modules>
</SaladoPlayer>