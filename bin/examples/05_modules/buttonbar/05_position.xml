<?xml version="1.0" encoding="utf-8"?>
<!--
	You can change position of background bar and all buttons inside panorama window.
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="panoramas/dz_green_check/green_check_f.xml"/>
	</panoramas>
	<modules>
		<ButtonBar path="modules/ButtonBar-1.0.swf">
			<bar path="modules/images/buttonbar/bar/bar_40_green.png" align="vertical:top" />
			<buttons path="modules/images/buttonbar/buttons/buttons_30x30_blue.png" align="vertical:top,horizontal:left" move="horizontal:5,vertical:5">
				<button name="up"/>
				<button name="down"/>
				<button name="left"/>
				<button name="right"/>
				<button name="in"/>
				<button name="out"/>
				<button name="drag"/>
				<button name="fullscreen"/>
			</buttons>
		</ButtonBar>
	</modules>
</SaladoPlayer>