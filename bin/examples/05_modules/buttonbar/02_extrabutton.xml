<?xml version="1.0" encoding="utf-8"?>
<!--
	Add your own custom buttons. Extrabuttons bitmaps are defined in bitmaps grid in third and fourth row,
	first column for "a", second for "b" ect. Each extraButton executes action on mouse press.
	
	http://panozona.com/wiki/Module:ButtonBar
-->
<SaladoPlayer>
	<global debug="true">
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="yellowChecker" path="~panoramas/dz_yellow_check/yellow_check_f.xml"/>
	</panoramas>
	<modules>
		<ButtonBar path="~modules/ButtonBar-1.2.swf">
			<buttons path="~modules/images/buttonbar/buttons_30x30_black.png">
				<button name="in"/>
				<button name="out"/>
				<button name="drag"/>
				<extraButton name="a" action="printHello"/>
				<button name="autorotation"/>
				<button name="fullscreen"/>
			</buttons>
		</ButtonBar>
	</modules>
	<actions>
		<action id="printHello" content="SaladoPlayer.print(Hello I am extraButton a)"/>
	</actions>
</SaladoPlayer>