<?xml version="1.0" encoding="utf-8"?>
<!--
	Each one of extrabuttons can be lited up or dimmed on demand. This feature can be usefull
	when extraButton reflects state of some option, like if module window is visible or not.
	
	http://panozona.com/wiki/Module:ButtonBar
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="yellowChecker" path="~panoramas/dz_yellow_check/yellow_check_f.xml">
			<image id="yc_redArrow" location="pan:-10" path="~hotspots/images/red_arrow.png" mouse="onClick:setInactive"/>
			<image id="yc_greenArrow" location="pan:10" path="~hotspots/images/green_arrow.png" mouse="onClick:setActive"/>
		</panorama>
	</panoramas>
	<modules>
		<ButtonBar path="~modules/ButtonBar-1.2.swf">
			<buttons path="~modules/images/buttonbar/buttons_40x40_black.png">
				<extraButton name="a" action="printHello"/>
			</buttons>
		</ButtonBar>
	</modules>
	<actions>
		<action id="printHello" content="SaladoPlayer.print(Hello I am extraButton a)"/>
		<action id="setActive" content="ButtonBar.setActive(a,true)"/>
		<action id="setInactive" content="ButtonBar.setActive(a,false)"/>
	</actions>
</SaladoPlayer>