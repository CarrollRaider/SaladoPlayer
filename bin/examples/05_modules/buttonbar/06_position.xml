<?xml version="1.0" encoding="utf-8"?>
<!--
	Change position and alignment of bar and all buttons at once, as well as each button individually.
	Use spacing attribute to set space between buttons that have no custom move values set.
	
	http://panozona.com/wiki/Module:ButtonBar
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="yellowChecker" path="~panoramas/dz_yellow_check/yellow_check_f.xml"/>
	</panoramas>
	<modules>
		<ButtonBar path="~modules/ButtonBar-1.2.swf">
			<buttons path="~modules/images/buttonbar/buttons_30x30_black.png" spacing="2" align="horizontal:center" move="horizontal:70">
				<button name="up" move="horizontal:-100,vertical:-30"/>
				<button name="down" move="horizontal:-100"/>
				<button name="left" move="horizontal:-130,vertical:-15"/>
				<button name="right" move="horizontal:-70,vertical:-15"/>
				<button name="in" move="horizontal:-35,vertical:-30"/>
				<button name="out" move="horizontal:-35"/>
				<button name="drag"/>
				<button name="autorotation"/>
				<button name="fullscreen"/>
			</buttons>
		</ButtonBar>
	</modules>
</SaladoPlayer>