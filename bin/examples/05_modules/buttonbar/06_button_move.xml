<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml"/>
	</panoramas>
	<modules>
		<ButtonBar path="~modules/ButtonBar-1.1.swf">
			<bar path="~modules/images/buttonbar/bar/blob_blue.png" size="width:203,height:85" />
			<buttons path="~modules/images/buttonbar/buttons/buttons_30x30_blue.png" spacing="-3">
				<button name="up" move="vertical:-40,horizontal:70"/>
				<button name="down" move="horizontal:43"/>
				<button name="left" move="vertical:-20"/>
				<button name="right" move="vertical:-20,horizontal:5"/>
				<button name="in" move="vertical:-31,horizontal:12"/>
				<button name="out" move="vertical:-6,horizontal:-15"/>
				<button name="drag"/>
				<button name="autorotation"/>
				<button name="fullscreen"/>
			</buttons>
		</ButtonBar>
	</modules>
</SaladoPlayer>