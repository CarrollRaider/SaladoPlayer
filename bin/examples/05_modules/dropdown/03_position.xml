<?xml version="1.0" encoding="utf-8"?>
<!--
	You can set position of drop-dwon list inside panorama window.
	
	http://panozona.com/wiki/Module:DropDown
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml"/>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml"/>
		<panorama id="redChecker" path="~panoramas/dz_red_check/red_check_f.xml"/>
		<panorama id="yellowChecker" path="~panoramas/dz_yellow_check/yellow_check_f.xml"/>
	</panoramas>
	<modules>
		<DropDown path="~modules/DropDown-1.2.swf">
			<window align="horizontal:right,vertical:top" move="horizontal:-40,vertical:40"/>
			<box style="opensUp:false">
			<elements>
				<element target="blueChecker" label="Blue checker"/>
				<element target="greenChecker" label="Green checker"/>
				<element target="redChecker" label="Red checker"/>
				<element target="yellowChecker" label="Yellow checker"/>
			</elements>
		</DropDown>
	</modules>
</SaladoPlayer>