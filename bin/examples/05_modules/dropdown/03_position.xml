<?xml version="1.0" encoding="utf-8"?>
<!--
	You can set position of drop-dwon list inside panorama window.
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="panoramas/dz_green_check/green_check_f.xml"/>
		<panorama id="blueChecker" path="panoramas/dz_blue_check/blue_check_f.xml"/>
		<panorama id="redChecker" path="panoramas/dz_red_check/red_check_f.xml"/>
		<panorama id="yellowChecker" path="panoramas/dz_yellow_check/yellow_check_f.xml"/>
	</panoramas>
	<modules>
		<DropDown path="modules/DropDown-1.0.swf">
			<settings align="horizontal:right,vertical:top" move="horizontal:-40,vertical:40" style="opensUp:false" />
			<elements>
				<element label="Blue checker" panorama="blueChecker"/>
				<element label="Green checker" panorama="greenChecker"/>
				<element label="Red checker" panorama="redChecker"/>
				<element label="Yellow checker" panorama="yellowChecker"/>
			</elements>
		</DropDown>
	</modules>
</SaladoPlayer>