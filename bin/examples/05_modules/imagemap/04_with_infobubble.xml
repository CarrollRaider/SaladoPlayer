<?xml version="1.0" encoding="utf-8" ?>
<!--
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="panoramas/dz_green_check/green_check_f.xml"/>
		<panorama id="blueChecker" path="panoramas/dz_blue_check/blue_check_f.xml"/>
		<panorama id="redChecker" path="panoramas/dz_red_check/red_check_f.xml"/>
	</panoramas>
	<modules>
		<InfoBubble path="modules/InfoBubble-1.0.swf">
			<bubbles>
				<bubble id="greenBubble" path="modules/images/infobubble/green.jpg"/>
				<bubble id="blueBubble" path="modules/images/infobubble/blue.jpg"/>
				<bubble id="redBubble" path="modules/images/infobubble/red.jpg"/>
			</bubbles>
		</InfoBubble>
		<ImageMap path="modules/ImageMap-1.0.swf">
			<window open="false" transitionType="slideRight" openTween="transition:Back.easeOut" onOpen="mapOpened" onClose="mapClosed" alpha="0.8"/>
			<viewer moveEnabled="true" dragEnabled="true" zoomEnabled="true"/>
			<maps>
				<map id="map1" path="modules/images/imagemap/map_1.jpg">
					<waypoint target="greenChecker" position="x:150,y:100" mouse="onOver:showGreenBubble,onOut:hideBubble"/>
					<waypoint target="blueChecker" position="x:800,y:200" mouse="onOver:showBlueBubble,onOut:hideBubble"/>
					<waypoint target="redChecker" position="x:500,y:300" mouse="onOver:showRedBubble,onOut:hideBubble"/>
				</map>
			</maps>
		</ImageMap>
		<ButtonBar path="modules/ButtonBar-1.1.swf">
			<buttons path="modules/images/buttonbar/buttons/buttons_30x30_blue.png">
				<extraButton name="b" action="mapToggle"/>
			</buttons>
		</ButtonBar>
	</modules>
	<actions>
		<action id="mapToggle" content="ImageMap.toggleOpen()"/>
		<action id="mapOpened" content="ButtonBar.setExtraButtonActive(b,true)"/>
		<action id="mapClosed" content="ButtonBar.setExtraButtonActive(b,false)"/>
		<action id="showGreenBubble" content="InfoBubble.showBubble(greenBubble)"/>
		<action id="showBlueBubble" content="InfoBubble.showBubble(blueBubble)"/>
		<action id="showRedBubble" content="InfoBubble.showBubble(redBubble)"/>
		<action id="hideBubble" content="InfoBubble.hideBubble()"/>
	</actions>
</SaladoPlayer>