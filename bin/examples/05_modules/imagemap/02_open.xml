<?xml version="1.0" encoding="utf-8"?>
<!--
	You can set module as closed by default, and open/close it by calling proper functions.
	Assign actions that will be executed whenever ImageMap changes "open" state,
	so this change could be reflected in your interface, for example by changing state of buttons.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true">
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml">
			<image id="bc_greenArrow" path="~hotspots/images/green_arrow.png" location="pan:-5,tilt:5" mouse="onClick:openMap"/>
			<image id="bc_redArrow" path="~hotspots/images/red_arrow.png" location="pan:-5,tilt:-5" mouse="onClick:closeMap"/>
			<image id="bc_yellowArrow" path="~hotspots/images/yellow_arrow.png" location="pan:5" mouse="onClick:toggleOpenMap"/>
		</panorama>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.3.swf">
			<window open="false" onOpen="printOpen" onClose="printClose"/>
			<close path="~media/images/misc/close.png" move="vertical:-10,horizontal:10"/>
			<viewer path="~modules/images/imagemap/navigation_20x20_black.png"/>
			<maps>
				<map id="map2" path="~media/images/maps/map_2.jpg">
					<waypoint target="blueChecker" position="x:310,y:280"/>
				</map>
			</maps>
		</ImageMap>
	</modules>
	<actions>
		<action id="openMap" content="ImageMap.setOpen(true)"/>
		<action id="closeMap" content="ImageMap.setOpen(false)"/>
		<action id="toggleOpenMap" content="ImageMap.toggleOpen()"/>
		<action id="printOpen" content="SaladoPlayer.print(map opened)"/>
		<action id="printClose" content="SaladoPlayer.print(map closed)"/>
	</actions>
</SaladoPlayer>