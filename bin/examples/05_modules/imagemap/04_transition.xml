<?xml version="1.0" encoding="utf-8"?>
<!--
	You can change transition to slide up down left right, or fade. In order to make slide transitions look batter,
	you can align map inside panorama window, so that it would slide in and out close to its default position.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml">
			<image id="bc_yellowArrow" path="~hotspots/images/yellow_arrow.png" mouse="onClick:toggleOpenMap"/>
		</panorama>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.2.swf">
			<window transition="type:slideUp"/>
			<maps>
				<map id="map1" path="~media/images/maps/map_1.jpg">
					<waypoint target="blueChecker" position="x:150,y:100"/>
				</map>
			</maps>
		</ImageMap>
	</modules>
	<actions>
		<action id="toggleOpenMap" content="ImageMap.toggleOpen()"/>
	</actions>
</SaladoPlayer>