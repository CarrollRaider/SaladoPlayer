<?xml version="1.0" encoding="utf-8" ?>
<!--
	Each map can contain many gropus of waypoints, and each group cna be individually customized.
	Waypoint consists of button, and radar. Waypoint can have different bitmaps and can be moved
	around his actual position on map. Radars can have different colors and sizes, they can also
	display changes in panorama tilt. 
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml"/>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml"/>
		<panorama id="redChecker" path="~panoramas/dz_red_check/red_check_f.xml"/>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.3.swf">
			<viewer path="~modules/images/imagemap/navigation_20x20_black.png"/>
			<maps>
				<map id="map1" path="~media/images/maps/map_1.jpg">
					<waypoints path="~modules/images/imagemap/waypoints_button_20x20.png" radar="color:#FFFFFF,borderColor:000000,alpha:0.5,radius:50">
						<waypoint target="greenChecker" position="x:550,y:100"/>
						<waypoint target="blueChecker" position="x:800,y:200"/>
					</waypoints>
					<waypoints path="~modules/images/imagemap/waypoints_bubble_45x45.png" move="horizontal:6,vertical:-22" radar="showTilt:false">
						<waypoint target="redChecker" position="x:500,y:300"/>
					</waypoints>
				</map>
			</maps>
		</ImageMap>
	</modules>
</SaladoPlayer>