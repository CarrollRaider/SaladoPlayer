<?xml version="1.0" encoding="utf-8" ?>
<!--
	You can change appearance of all waypoints in given map. Each waypoint consists of button,
	and radar. You can change all colors and sizes for buttons, radars and their borders.
	Button always have alpha equal to 1, alpha of radar is independent to alpha of map window.
	You can use small image for map and instead of zooming it out to make all wyapoints visible
	you can make both waypoints and radars smaller, and place them closer to each other.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml"/>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml"/>
		<panorama id="redChecker" path="~panoramas/dz_red_check/red_check_f.xml"/>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.2.swf">
			<window alpha="0.5"/>
			<maps>
				<map id="map1" path="~modules/images/imagemap/map_1.jpg" buttons="radius:10,borderSize:3,borderColor:#FF0000,activeColor:#FAFFAA" radars="color:#000000,borderColor:000000,alpha:0.5,radius:50">
					<waypoint target="greenChecker" position="x:550,y:100" panShift="90"/>
					<waypoint target="blueChecker" position="x:800,y:200"/>
					<waypoint target="redChecker" position="x:500,y:300"/>
				</map>
			</maps>
		</ImageMap>
	</modules>
</SaladoPlayer>