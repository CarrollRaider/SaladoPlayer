<?xml version="1.0" encoding="utf-8" ?>
<!--
	Change appearance of all waypoints in given map. Each waypoint consists of button, and radar.
	You can change all colors and sizes for buttons, radars and their borders. You can use smaller
	image for map and instead of zooming it out to make all wyapointscvisible, you can make both
	waypoints and radars smaller, and place them closer to each other.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml"/>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml"/>
		<panorama id="redChecker" path="~panoramas/dz_red_check/red_check_f.xml"/>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.3.swf">
			<viewer path="~modules/images/imagemap/navigation_20x20_black.png"/>
			<maps>
				<map id="map1" path="~media/images/maps/map_1.jpg" buttons="radius:10,borderSize:3,borderColor:#FF0000,activeColor:#FFFFFF" radars="color:#FFFFFF,borderColor:000000,alpha:0.5,radius:50">
					<waypoint target="greenChecker" position="x:550,y:100"/>
					<waypoint target="blueChecker" position="x:800,y:200"/>
					<waypoint target="redChecker" position="x:500,y:300"/>
				</map>
			</maps>
		</ImageMap>
	</modules>
</SaladoPlayer>