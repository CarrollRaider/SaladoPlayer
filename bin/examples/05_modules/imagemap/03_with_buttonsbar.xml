<?xml version="1.0" encoding="utf-8" ?>
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="panoramas/dz_green_check/green_check_f.xml"/>
		<panorama id="blueChecker" path="panoramas/dz_blue_check/blue_check_f.xml"/>
		<panorama id="redChecker" path="panoramas/dz_red_check/red_check_f.xml"/>
	</panoramas>
	<modules>
		<ImageMap path="modules/ImageMap-1.0.swf">
			<window open="false" transitionType="slideRight" openTween="transition:Back.easeOut" onOpen="mapOpened" onClose="mapClosed" alpha="0.8"/>
			<viewer moveEnabled="true" dragEnabled="true" zoomEnabled="true"/>
			<maps>
				<map id="map1" path="modules/images/imagemap/map_1.jpg">
					<waypoint target="greenChecker" position="x:150,y:100"/>
					<waypoint target="blueChecker" position="x:800,y:200"/>
					<waypoint target="redChecker" position="x:500,y:300"/>
				</map>
			</maps>
		</ImageMap>
		<ButtonsBar path="modules/ButtonsBar-1.0.swf">
			<buttons path="modules/images/buttonsbar/buttons/buttons_30x30_blue.png">
				<extraButton name="b" action="mapToggle"/>
			</buttons>
		</ButtonsBar>
	</modules>
	<actions>
		<action id="mapToggle" content="ImageMap.toggleOpen()"/>
		<action id="mapOpened" content="ButtonsBar.setExtraButtonActive(b,true)"/>
		<action id="mapClosed" content="ButtonsBar.setExtraButtonActive(b,false)"/>
	</actions>
</SaladoPlayer>