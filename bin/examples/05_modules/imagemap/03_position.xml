<?xml version="1.0" encoding="utf-8"?>
<!--
	Change size and alignment of module window. InitZoom determines zoom level each time
	given map is set, however image will never be zoomed higher then 200% and lower than size, when shorter
	of its sides will be same as analogical map window dimension. If initZoom exceeds those limits,
	values of those limits will be applied.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml">
			<image id="bc_yellowArrow" path="~hotspots/images/yellow_arrow.png" mouse="onClick:toggleOpenMap"/>
		</panorama>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.2.swf">
			<window size="width:200,height:300" align="vertical:bottom" move="vertical:-20"/>
			<maps>
				<map id="map1" path="~modules/images/imagemap/map_2.jpg" initZoom="30">
					<waypoint target="blueChecker" position="x:150,y:100"/>
				</map>
			</maps>
		</ImageMap>
	</modules>
	<actions>
		<action id="toggleOpenMap" content="ImageMap.toggleOpen()"/>
	</actions>
</SaladoPlayer>