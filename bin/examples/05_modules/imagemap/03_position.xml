<?xml version="1.0" encoding="utf-8"?>
<!--
	Change size and alignment of module window. zoom attribute determines zoom level each time
	given map is set, however image will never be zoomed lower than size, when shorter of its
	sides will be same as analogical map window dimension. If zoom values exceed those limits,
	values of those limits will be applied.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerBlue" path="~panoramas/dz_checker_blue/checker_blue_f.xml"/>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.3.swf">
			<window size="width:200,height:300" align="vertical:bottom" move="vertical:-20"/>
			<viewer path="~modules/images/imagemap/navigation_20x20_black.png"/>
			<maps>
				<map id="map1" path="~media/images/maps/map_2.jpg" zoom="init:30,max:200,min:10">
					<waypoints path="~modules/images/imagemap/waypoints_button_20x20.png">
						<waypoint target="checkerBlue" position="x:250,y:150"/>
					</waypoints>
				</map>
			</maps>
		</ImageMap>
	</modules>
</SaladoPlayer>