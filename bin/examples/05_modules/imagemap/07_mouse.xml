<?xml version="1.0" encoding="utf-8"?>
<!--
	Assign mouse events on interaction with each waypoint. You can display content
	when mouse is hovering over waypoint button with other modules, like InfoBubble.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true">
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml">
			<image id="bc_yellowArrow" path="~hotspots/images/yellow_arrow.png" mouse="onClick:toggleOpenMap"/>
		</panorama>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.2.swf">
			<maps>
				<map id="map2" path="~media/images/maps/map_2.jpg">
					<waypoint target="blueChecker" position="x:350,y:300" mouse="onOver:printOver,onOut:printOut"/>
				</map>
			</maps>
		</ImageMap>
	</modules>
	<actions>
		<action id="toggleOpenMap" content="ImageMap.toggleOpen()"/>
		<action id="printOver" content="SaladoPlayer.print(over)"/>
		<action id="printOut" content="SaladoPlayer.print(out)"/>
	</actions>
</SaladoPlayer>