<?xml version="1.0" encoding="utf-8"?>
<!--
	There are four ways to move around map: zoom panel, move panel, mouse drag and mouse scroll.
	Each of them can be disabled, you can also configure move and zoom speed. If you are using
	small image for map, you can disable all navigation methods and create simple static map.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml">
			<image id="bc_yellowArrow" path="~hotspots/images/yellow_arrow.png" mouse="onClick:toggleOpenMap"/>
		</panorama>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.2.swf">
			<viewer moveEnabled="false" zoomSpeed="0.05"/>
			<maps>
				<map id="map1" path="~media/images/maps/map_1.jpg">
					<waypoint target="blueChecker" position="x:150,y:100"/>
				</map>
			</maps>
		</ImageMap>
	</modules>
	<actions>
		<action id="toggleOpenMap" content="ImageMap.toggleOpen()"/>
	</actions>
</SaladoPlayer>