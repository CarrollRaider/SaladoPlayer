<?xml version="1.0" encoding="utf-8"?>
<!--
	There are three ways to move around map: zoom buttons, move muttons, and mouse drag.
	Each of them can be disabled, you can also configure buttons speed. If you are using 
	small image for map, you can disable all navigation methods and create simple static map.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml">
			<image id="yellowArrow" path="~hotspots/images/yellow_arrow.png" location="pan:-10" mouse="onClick:toggleOpenMap"/>
		</panorama>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.1.swf">
			<viewer moveEnabled="false" zoomSpeed="0.05"/>
			<maps>
				<map id="map1" path="~modules/images/imagemap/map_1.jpg">
					<waypoint target="greenChecker" position="x:150,y:100"/>
				</map>
			</maps>
		</ImageMap>
	</modules>
	<actions>
		<action id="toggleOpenMap" content="ImageMap.toggleOpen()"/>
	</actions>
</SaladoPlayer>