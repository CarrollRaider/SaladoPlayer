<?xml version="1.0" encoding="utf-8" ?>
<!--
	- ImageMap should use other module to be opened
	- Here is how it can cooperate with ImageButton
	- see: http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true">
		<trace open="false"/>
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="panoramas/dz_green_check/green_check_f.xml"/>
		<panorama id="blueChecker" path="panoramas/dz_blue_check/blue_check_f.xml"/>
		<panorama id="redChecker" path="panoramas/dz_red_check/red_check_f.xml"/>
		<panorama id="yellowChecker" path="panoramas/dz_yellow_check/yellow_check_f.xml"/>
	</panoramas>
	<modules>
		<ImageMap path="modules/ImageMap-1.0.swf">
			<window open="false" transitionType="slideRight" openTween="transition:Back.easeOut" onOpen="mapOpened" onClose="mapClosed" alpha="0.8"/>
			<viewer moveEnabled="true" dragEnabled="true" zoomEnabled="true"/>
			<maps>
				<map id="map1" path="modules/images/imagemap/map_1.jpg">
					<waypoint target="greenChecker" position="x:150,y:100"/>
					<waypoint target="blueChecker" position="x:800,y:200"/>
					<waypoint target="redChecker" position="x:500,y:300"/>
				</map>
			</maps>
		</ImageMap>
		<DropDown path="modules/DropDown-1.0.swf">
			<settings/>
			<elements>
				<element label="Blue checker" panorama="blueChecker"/>
				<element label="Green checker" panorama="greenChecker"/>
				<element label="Red checker" panorama="redChecker"/>
				<element label="Yellow checker" panorama="yellowChecker"/>
			</elements>
		</DropDown>
		<ImageButton path="modules/ImageButton-1.0.swf">
			<buttons>
				<button id="button1" path="modules/images/imagemap_icon.png" align="vertical:top,horizontal:right" move="horizontal:-30,vertical:30" mouse="onClick:mapToggle"/>
			</buttons>
		</ImageButton>
	</modules>
	<actions>
		<action id="mapToggle" content="ImageMap.toggleOpen()"/>
		<action id="mapOpened" content="ImageButton.close(button1)"/>
		<action id="mapClosed" content="ImageButton.open(button1)"/>
	</actions>
</SaladoPlayer>