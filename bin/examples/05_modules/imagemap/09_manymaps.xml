<?xml version="1.0" encoding="utf-8"?>
<!--
	Waypoints needs to have unique targets among all maps. Whenever user loads panorama, module switches 
	to map that contains waypoint targeting to given panorama. If user loads first panorama and none of maps
	contains waypoints targeting to given panorama, first map in line is displayed. If same situation occures 
	when loading further panoramas, map is not changed.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml">
			<image id="yellowArrow" path="~hotspots/images/yellow_arrow.png" location="pan:-10" mouse="onClick:toggleOpenMap"/>
		</panorama>
		<panorama id="redChecker" path="~panoramas/dz_red_check/red_check_f.xml">
			<image id="yellowArrow2" path="~hotspots/images/yellow_arrow.png" location="pan:-10" mouse="onClick:toggleOpenMap"/>
		</panorama>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.2.swf">
			<maps>
				<map id="map1" path="~modules/images/imagemap/map_1.jpg">
					<waypoint target="greenChecker" position="x:150,y:100"/>
				</map>
				<map id="map2" path="~modules/images/imagemap/map_2.jpg">
					<waypoint target="redChecker" position="x:250,y:200"/>
				</map>
			</maps>
		</ImageMap>
		<DropDown path="~modules/DropDown-1.1.swf">
			<elements>
				<element target="greenChecker" label="Green checker"/>
				<element target="redChecker" label="Red checker"/>
			</elements>
		</DropDown>
	</modules>
	<actions>
		<action id="toggleOpenMap" content="ImageMap.toggleOpen()"/>
	</actions>
</SaladoPlayer>