<?xml version="1.0" encoding="utf-8"?>
<!--
	Set tweens for open and close transitions. Parameters will apply both to slide
	and fade transitions. If you set time to 0, no transition effect will be applied.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml">
			<image id="bc_yellowArrow" path="~hotspots/images/yellow_arrow.png" mouse="onClick:toggleOpenMap"/>
		</panorama>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.2.swf">
			<window openTween="transition:Bounce.easeOut,time:0.75" closeTween="transition:Expo.easeIn,time:0.75"/>
			<maps>
				<map id="map2" path="~modules/images/imagemap/map_2.jpg">
					<waypoint target="blueChecker" position="x:150,y:100"/>
				</map>
			</maps>
		</ImageMap>
	</modules>
	<actions>
		<action id="toggleOpenMap" content="ImageMap.toggleOpen()"/>
	</actions>
</SaladoPlayer>