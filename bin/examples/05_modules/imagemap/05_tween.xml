<?xml version="1.0" encoding="utf-8"?>
<!--
	Set tweens for open and close transitions. Parameters will apply both to slide
	and fade transitions. If you set time to 0, no transition effect will be applied.
	
	http://panozona.com/wiki/Module:ImageMap
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerBlue" path="~panoramas/dz_checker_blue/checker_blue_f.xml">
			<image id="bc_arrowYellow" path="~hotspots/images/arrow_yellow.png" mouse="onClick:toggleOpenMap"/>
		</panorama>
	</panoramas>
	<modules>
		<ImageMap path="~modules/ImageMap-1.3.swf">
			<window openTween="transition:Bounce.easeOut,time:0.75" closeTween="transition:Expo.easeIn,time:0.75"/>
			<viewer path="~modules/images/imagemap/navigation_20x20_black.png"/>
			<maps>
				<map id="map2" path="~media/images/maps/map_2.jpg">
					<waypoints path="~modules/images/imagemap/waypoints_button_20x20.png">
						<waypoint target="checkerBlue" position="x:150,y:100"/>
					</waypoints>
				</map>
			</maps>
		</ImageMap>
	</modules>
	<actions>
		<action id="toggleOpenMap" content="ImageMap.toggleOpen()"/>
	</actions>
</SaladoPlayer>