<?xml version="1.0" encoding="utf-8" ?>
<!--
	Assign mouse events on interaction with each element. You can display content
	when mouse is hovering over element with other modules, like InfoBubble.
	
	http://panozona.com/wiki/Module:MenuScroller
-->
<SaladoPlayer>
	<global debug="true">
		<trace open="true"/>
	</global>
	<panoramas>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml"/>
	</panoramas>
	<modules>
		<MenuScroller path="~modules/MenuScroller-1.0.swf">
			<elements>
				<element target="blueChecker" path="~media/images/thumbs/blue.jpg" mouse="onOver:blueOnOver,onOut:blueOnOut"/>
			</elements>
		</MenuScroller>
	</modules>
	<actions>
		<action id="blueOnOver" content="SaladoPlayer.print(blue onOver!)"/>
		<action id="blueOnOut" content="SaladoPlayer.print(blue onOut!)"/>
	</actions>
</SaladoPlayer>