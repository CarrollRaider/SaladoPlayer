<?xml version="1.0" encoding="utf-8" ?>
<!--
	Change size and alignment of module window. Slider can be displayed horizontal, but it may require
	modification of bitmaps that have buttons rotetd 90 degrees.
	
	http://panozona.com/wiki/Module:ZoomSlider
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="checkerYellow" path="~panoramas/dz_checker_yellow/checker_yellow_f.xml"/>
	</panoramas>
	<modules>
		<ZoomSlider path="~modules/ZoomSlider-1.0.swf">
			<window align="horizontal:center,vertical:bottom" move="horizontal:0,vertical:-10"/>
			<slider path="~modules/images/zoomslider/elements_40x40.png" slidesVertical="false" length="400"/>
		</ZoomSlider>
	</modules>
</SaladoPlayer>