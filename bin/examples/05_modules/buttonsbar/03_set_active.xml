<?xml version="1.0" encoding="utf-8"?>
<!--
	Each one of extrabuttons can be lited up or dimmed on demand. This feature can be usefull when extraButton reflects
	state of some option, like if module window is visible or not.
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="panoramas/dz_green_check/green_check_f.xml">
			<image id="greenArrow" location="pan:-20" path="hotspots/images/green_arrow.png" mouse="onClick:setActive"/>
			<image id="blueArrow" location="pan:20" path="hotspots/images/red_arrow.png" mouse="onClick:setInactive"/>
		</panorama>
	</panoramas>
	<modules>
		<ButtonsBar path="modules/ButtonsBar-1.0.swf">
			<buttons path="modules/images/buttonsbar/buttons/buttons_30x30_blue.png">
				<button name="in"/>
				<button name="out"/>
				<button name="drag"/>
				<button name="fullscreen"/>
				<extraButton name="a" action="printHello"/>
			</buttons>
		</ButtonsBar>
	</modules>
	<actions>
		<action id="printHello" content="SaladoPlayer.print(Hello I am extraButton a)"/>
		<action id="setActive" content="ButtonsBar.setExtraButtonActive(a,true)"/>
		<action id="setInactive" content="ButtonsBar.setExtraButtonActive(a,false)"/>
	</actions>
</SaladoPlayer>