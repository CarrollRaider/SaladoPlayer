<?xml version="1.0" encoding="utf-8"?>
<!--
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml">
			<image id="blueArrow" location="pan:0" path="~hotspots/images/blue_arrow.png" mouse="onOver:showBubbleBlue,onOut:hideBubble"/>
		</panorama>
	</panoramas>
	<modules>
		<InfoBubble path="~modules/InfoBubble-1.2.swf">
			<settings onEnable="onBubAct" onDisable="onBubDisact"/>
			<bubbles>
				<image id="bubbleBlue" path="~media/images/thumbs/blue.jpg"/>
			</bubbles>
		</InfoBubble>
		<ButtonBar path="~modules/ButtonBar-1.2.swf">
			<buttons path="~modules/images/buttonbar/buttons_30x30_black.png">
				<extraButton name="c" action="bubToggle"/>
			</buttons>
		</ButtonBar>
	</modules>
	<actions>
		<action id="showBubbleBlue" content="InfoBubble.show(bubbleBlue)"/>
		<action id="hideBubble" content="InfoBubble.hide()"/>
		<action id="bubToggle" content="InfoBubble.toggleEnabled()"/>
		<action id="onBubAct" content="ButtonBar.setActive(c,true)"/>
		<action id="onBubDisact" content="ButtonBar.setActive(c,false)"/>
	</actions>
</SaladoPlayer>