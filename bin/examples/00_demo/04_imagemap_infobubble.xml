<?xml version="1.0" encoding="utf-8" ?>
<!--
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml"/>
		<panorama id="blueChecker" path="~panoramas/dz_blue_check/blue_check_f.xml"/>
		<panorama id="redChecker" path="~panoramas/dz_red_check/red_check_f.xml"/>
	</panoramas>
	<modules>
		<InfoBubble path="~modules/InfoBubble-1.3.swf">
			<bubbles>
				<image id="greenBubble" path="~media/images/thumbs/green.jpg"/>
				<image id="blueBubble" path="~media/images/thumbs/blue.jpg"/>
				<image id="redBubble" path="~media/images/thumbs/red.jpg"/>
			</bubbles>
		</InfoBubble>
		<ImageMap path="~modules/ImageMap-1.3.swf">
			<window open="false" transition="type:fade" openTween="transition:Back.easeOut" onOpen="mapOpened" onClose="mapClosed" alpha="0.8"/>
			<viewer path="~modules/images/imagemap/navigation_20x20_black.png"/>
			<maps>
				<map id="map1" path="~media/images/maps/map_1.jpg">
					<waypoint target="greenChecker" position="x:150,y:100" mouse="onOver:showGreenBubble,onOut:hideBubble"/>
					<waypoint target="blueChecker" position="x:800,y:200" mouse="onOver:showBlueBubble,onOut:hideBubble"/>
					<waypoint target="redChecker" position="x:500,y:300" mouse="onOver:showRedBubble,onOut:hideBubble"/>
				</map>
			</maps>
		</ImageMap>
		<ButtonBar path="~modules/ButtonBar-1.2.swf">
			<buttons path="~modules/images/buttonbar/buttons_30x30_black.png">
				<extraButton name="b" action="mapToggle"/>
			</buttons>
		</ButtonBar>
	</modules>
	<actions>
		<action id="mapToggle" content="ImageMap.toggleOpen()"/>
		<action id="mapOpened" content="ButtonBar.setActive(b,true)"/>
		<action id="mapClosed" content="ButtonBar.setActive(b,false)"/>
		<action id="showGreenBubble" content="InfoBubble.show(greenBubble)"/>
		<action id="showBlueBubble" content="InfoBubble.show(blueBubble)"/>
		<action id="showRedBubble" content="InfoBubble.show(redBubble)"/>
		<action id="hideBubble" content="InfoBubble.hide()"/>
	</actions>
</SaladoPlayer>