<?xml version="1.0" encoding="utf-8" ?>
<SaladoPlayer>
	<global debug="false">
		<control autorotation="enabled:false"/>
		<panoramas firstPanorama="park"/>
	</global>
	<panoramas>
		<panorama id="kortrijk" path="~../../panoramas4/dz_kortrijk/kortrijk_f.xml">
			<swf id="k_hs1" location="pan:-55" path="~hotspots/AdvancedHotspot-1.0.swf" mouse="onClick:loadPark,onOver:showParkBubble,onOut:hideBubble">
				<settings path="~hotspots/images/red_arrow.png"/>
			</swf>
		</panorama>
		<panorama id="park" path="~../../panoramas4/dz_park/park_f.xml">
			<swf id="p_hs1" location="pan:170" path="~hotspots/SimpleHotspot-1.0.swf" mouse="onClick:loadKortrijk,onOver:showKortrijkBubble,onOut:hideBubble"/>
			<swf id="vlad" path="~hotspots/VideoHotspot-1.0.swf" location="pan:50,distance:800">
				<settings splashPath="~hotspots/video/hello_splash.png" videoPath="~hotspots/video/hello.mp4" size="width:400,height:300"/>
			</swf>
		</panorama>
	</panoramas>
	<modules>
		<InfoBubble path="~modules/InfoBubble-1.2.swf">
			<settings onEnable="onBubbleAct" onDisable="onBubbleDisact"/>
			<bubbles>
				<bubble id="parkBubble" path="~modules/images/infobubble/park.jpg"/>
				<bubble id="kortrijkBubble" path="~modules/images/infobubble/kortrijk.jpg"/>
			</bubbles>
		</InfoBubble>
		<DropDown path="~modules/DropDown-1.1.swf">
			<settings align="horizontal:left,vertical:top" move="horizontal:40,vertical:40" style="opensUp:false,fontColor:#212021,fontSize:22,plainColor:#94ba4a,borderColor:#212021,hoverColor:#b9d243,activeColor:#b9d243"/>
			<elements>
				<element target="park" label="Park 3200x1600"/>
				<element target="kortrijk" label="Kortrijk 12800x6400"/>
			</elements>
		</DropDown>
		<ImageMap path="~modules/ImageMap-1.2.swf">
			<window open="false" transition="type:slideRight" openTween="transition:Back.easeOut" onOpen="mapOpened" onClose="mapClosed" alpha="0.8"/>
			<viewer moveEnabled="true" dragEnabled="true" zoomEnabled="true"/>
			<maps>
				<map id="map1" path="~modules/images/imagemap/map_1.jpg">
					<waypoint target="park" position="x:250,y:100" mouse="onOver:showParkBubble,onOut:hideBubble"/>
					<waypoint target="kortrijk" position="x:700,y:300" mouse="onOver:showKortrijkBubble,onOut:hideBubble"/>
				</map>
			</maps>
		</ImageMap>
		<ImageButton path="~modules/ImageButton-1.2.swf">
			<buttons>
				<button id="button1" path="~modules/images/imagebutton/imagemap_icon.png" align="vertical:top,horizontal:right" move="horizontal:-30,vertical:30" mouse="onClick:mapToggle"/>
				<button id="help" path="~modules/images/imagebutton/help.png" align="vertical:middle,horizontal:center" mouse="onClick:helpToggle" open="false" onOpen="helpOpened" onClose="helpClosed" />
			</buttons>
		</ImageButton>
		<ButtonBar path="~modules/ButtonBar-1.1.swf">
			<bar path="~modules/images/buttonbar/bar/bar_350x35_green.png" size="height:35,width:300"/>
			<buttons path="~modules/images/buttonbar/buttons/buttons_25x25_green.png">
				<button name="left"/>
				<button name="right"/>
				<button name="up"/>
				<button name="down"/>
				<button name="in"/>
				<button name="out"/>
				<button name="drag"/>
				<extraButton name="b" action="mapToggle"/>
				<extraButton name="c" action="bubbleToggle"/>
				<button name="fullscreen"/>
				<extraButton name="e" action="helpToggle"/>
			</buttons>
		</ButtonBar>
		<MouseCursor path="~modules/MouseCursor-1.0.swf">
			<settings path="~modules/images/mousecursor/cursors_31x31.png"/>
		</MouseCursor>
	</modules>
	<actions>
		<action id="mapToggle" content="ImageMap.toggleOpen()"/>
		<action id="mapOpened" content="ImageButton.close(button1);ButtonBar.setExtraButtonActive(b,true)"/>
		<action id="mapClosed" content="ImageButton.open(button1);ButtonBar.setExtraButtonActive(b,false)"/>
		<action id="helpToggle" content="ImageButton.toggleOpen(help)"/>
		<action id="helpOpened" content="ButtonBar.setExtraButtonActive(e,true)"/>
		<action id="helpClosed" content="ButtonBar.setExtraButtonActive(e,false)"/>
		<action id="showParkBubble" content="InfoBubble.showBubble(parkBubble)"/>
		<action id="showKortrijkBubble" content="InfoBubble.showBubble(kortrijkBubble)"/>
		<action id="hideBubble" content="InfoBubble.hideBubble()"/>
		<action id="loadPark" content="SaladoPlayer.loadPano(park)"/>
		<action id="loadKortrijk" content="SaladoPlayer.loadPano(kortrijk)"/>
		<action id="bubbleToggle" content="InfoBubble.toggleEnabled()"/>
		<action id="onBubbleAct" content="ButtonBar.setExtraButtonActive(c,true)"/>
		<action id="onBubbleDisact" content="ButtonBar.setExtraButtonActive(c,false)"/>
	</actions>
</SaladoPlayer>