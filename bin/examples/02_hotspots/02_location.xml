<?xml version="1.0" encoding="utf-8" ?>
<!--
	Use location attribute for positioning hotspots inside panorama. It can take any set of values:
	pan(horizontal), tilt(vertical) and distance(depth). Default value for distance is 400.
	
	http://panozona.com/wiki/SaladoPlayer:Configuration
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_checker_green/checker_green_f.xml">
			<image id="gcArrowBlue" path="~hotspots/images/arrow_blue.png" location="tilt:10,distance:600"/>
			<image id="gcArrowGreen" path="~hotspots/images/arrow_green.png" location="pan:30"/>
		</panorama>
	</panoramas>
	<modules>
		<ViewFinder path="~modules/ViewFinder-1.3.swf"/>
	</modules>
</SaladoPlayer>