<?xml version="1.0" encoding="utf-8" ?>
<!--
	Use location attribute for positioning hotspots inside panorama. It can take any set of values:
	pan(horizontal), tilt(vertical) and distance(depth). Default value for distance is 400.
	
	http://panozona.com/wiki/SaladoPlayer:Configuration
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="GreenChecker" path="~panoramas/dz_green_check/green_check_f.xml">
			<image id="gc_blueArrow" path="~hotspots/images/blue_arrow.png" location="tilt:10,distance:600"/>
			<image id="gc_greenArrow" path="~hotspots/images/green_arrow.png" location="pan:30"/>
		</panorama>
	</panoramas>
	<modules>
		<ViewFinder path="~modules/ViewFinder-1.2.swf"/>
	</modules>
</SaladoPlayer>