<!-- 
	
This is example of combobox customization
	
	- cutout "path" is mandatory, it points to image containing bitmaps for buttons
	- basic buttons names are: up, down, left, right, in, out, drag, autorotate, fullscreen
	
-->
<?xml version="1.0" encoding="utf-8"?>
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="pano1" label="Park" path="panoramas/dz_park/park_f.xml"/>
		<panorama id="pano2" label="Shopping mall" path="panoramas/dz_shoppingmall/sm_f.xml"/>
		<panorama id="pano3" label="Volleyball" path="panoramas/dz_volleyball/vb_f.xml"/>
	</panoramas>
	<modules>
		<NavigationBar path="modules/NavigationBar.swf">
			<cutout path="modules/images/buttons.png"/>
			<bar visible="true" alpha="0.65" color="#ffff00"/>
			<combobox visible="true" style="backgroundColor:#ff00ff,fontColor:#0000ff,borderColor:#ffffff,selectedColor:#ff0000"/>
			<branding visible="true"/> <!-- show your support to project and don't remove branding -->
			<basicButtons> 						
				<basicButton name="drag" visible="false"/>
				<basicButton name="fullscreen" visible="false"/>
			</basicButtons>			
		</NavigationBar>
	</modules>	
</SaladoPlayer>