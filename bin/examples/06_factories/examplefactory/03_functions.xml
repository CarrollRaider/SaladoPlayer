<?xml version="1.0" encoding="utf-8" ?>
<!--
	You can call functions on one or many hotspots that are created by factory.
-->
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml">
			<product id="hs1" factory="ExampleFactory" location="pan:-20,tilt:10"/>
			<product id="hs2" factory="ExampleFactory" location="pan:0,tilt:10"/>
			<product id="hs3" factory="ExampleFactory" location="pan:20,tilt:10"/>
			<image id="yellowArrow1" path="~hotspots/images/yellow_arrow.png" location="pan:-20,tilt:-10" mouse="onClick:yellowArrow1Click"/>
			<image id="yellowArrow2" path="~hotspots/images/yellow_arrow.png" location="pan:10,tilt:-10" mouse="onClick:yellowArrow2Click"/>
		</panorama>
	</panoramas>
	<factories>
		<ExampleFactory path="~factories/ExampleFactory-1.0.swf" definition="hs1:blue,hs2:green">
			<product id="blue">
				<settings color1="#0000FF" color2="#00FFFF"/>
			</product>
			<product id="green">
				<settings color1="#00FF00" color2="#00FFAA"/>
			</product>
		</ExampleFactory>
	</factories>
	<actions>
		<action id="yellowArrow1Click" content="ExampleFactory[hs1].toggleColor()"/>
		<action id="yellowArrow2Click" content="ExampleFactory[hs2,hs3].toggleColor()"/>
	</actions>
</SaladoPlayer>