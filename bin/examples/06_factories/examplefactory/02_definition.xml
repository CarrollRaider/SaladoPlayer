<?xml version="1.0" encoding="utf-8" ?>
<!--
	Definition in Factory node allows to specify which product description will be used
	to make hotspot of given id. If definition does not contain hotspot id, factory
	uses first in line product description.
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="~panoramas/dz_green_check/green_check_f.xml">
			<product id="hs1" factory="ExampleFactory" location="pan:-20"/>
			<product id="hs2" factory="ExampleFactory" location="pan:0"/>
			<product id="hs3" factory="ExampleFactory" location="pan:20"/>
		</panorama>
	</panoramas>
	<factories>
		<ExampleFactory path="~factories/ExampleFactory-1.0.swf" definition="hs1:blue,hs2:green">
			<product id="blue">
				<settings color1="#0000FF" color2="#00FFFF"/>
			</product>
			<product id="green">
				<settings color1="#00FF00" color2="#00FFAA"/>
			</product>
		</ExampleFactory>
	</factories>
</SaladoPlayer>