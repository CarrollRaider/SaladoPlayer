<?xml version="1.0" encoding="utf-8" ?>
<!--
	Factories create hotspots using product descriptions contained in factory configurarion.
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenCheck" path="~~panoramas/dz_green_check/green_check_f.xml">
			<product id="hs1" factory="ExampleFactory" location="pan:-20"/>
			<product id="hs2" factory="ExampleFactory" location="pan:0"/>
			<product id="hs3" factory="ExampleFactory" location="pan:20"/>
			
		</panorama>
	</panoramas>
	<factories>
		<ExampleFactory path="~~factories/ExampleFactory-1.0.swf">
			<product id="blue">
				<settings color1="#0000FF" color2="#00FFFF"/>
			</product>
		</ExampleFactory>
	</factories>
</SaladoPlayer>