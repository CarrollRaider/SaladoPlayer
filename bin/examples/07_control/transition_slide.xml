<?xml version="1.0" encoding="utf-8"?>
<!--
	 Slide transition
	- slides new panorama over old one
	- you can configure sliding from left, right, up and down
	- you can set transition time time and tween function
	- see: http://panozona.com/wiki/SaladoPlayer:Configuration#control
-->
<SaladoPlayer>
	<global debug="true">
		<control transition="tween:Linear.easeNone,property:x,startValue:1000,endValue:0,time:1.5"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="panoramas/dz_green_check/green_check_f.xml"/>
		<panorama id="blueChecker" path="panoramas/dz_blue_check/blue_check_f.xml"/>
		<panorama id="redChecker" path="panoramas/dz_red_check/red_check_f.xml"/>
	</panoramas>
	<modules>
		<DropDown path="modules/DropDown-1.0.swf">
			<elements>
				<element label="Green checker" panorama="greenChecker"/>
				<element label="Blue checker" panorama="blueChecker"/>
				<element label="Red checker" panorama="redChecker"/>
			</elements>
		</DropDown>
	</modules>
</SaladoPlayer>