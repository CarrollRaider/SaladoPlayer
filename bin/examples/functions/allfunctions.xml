<!--
	
	All actions 
	
	- functions in single acton separated with semicolon are executed immidietly 
	- some functions can call other actions when they are done executing
	- you can exetute only one "moveTo" at the time i.e. in "moveToHotspot(hs1);moveToHotspot(hs2)"	second function will be ignored
	
-->
<?xml version="1.0" encoding="utf-8"?>
<SaladoPlayer>
	<global debug="true" autorotation="enabled:false" trace="initialVisibility:true"/>
	<panoramas>
		<panorama id="pano1" label="Park" path="panoramas/dz_park/park_f.xml">
			<hotspot id="hs1" position="pan:20" path="hotspots/arrow.png" mouse="onClick:act3"/>
		</panorama>
		<panorama id="pano2" label="Shopping mall" path="panoramas/dz_shoppingmall/sm_f.xml">
			<hotspot id="hs1" path="hotspots/arrow.png"/>
		</panorama>
		<panorama id="pano3" label="Volleyball" path="panoramas/dz_volleyball/vb_f.xml">
			<hotspot id="hs1" path="hotspots/arrow.png"/>
		</panorama>
	</panoramas>
	<actions>
		<action id="act1"  content="SaladoPlayer.print(I am printer)"/> <!-- String -->
		<action id="act2"  content="SaladoPlayer.loadPano(pano2)"/> <!-- panorama id -->
		<action id="act3"  content="SaladoPlayer.moveToHotspot(hs1)"/> <!-- hotspot id -->
		<action id="act4"  content="SaladoPlayer.moveToHotspotAnd(hs1,act1)"/> <!-- hotspot id, action id -->
		<action id="act5"  content="SaladoPlayer.moveToView(90,20,130)"/> <!-- pan, tilt, field of view -->
		<action id="act6"  content="SaladoPlayer.moveToViewAnd(-90,-20,60,act1)"/> <!-- pan, tilt, field of view, action id -->
		<action id="act7"  content="SaladoPlayer.jumpToView(10,10,110)"/>  <!-- pan, tilt, field of view -->
		<action id="act8"  content="SaladoPlayer.startMoving(2,2)"/> <!-- pan speed, tilt speed -->
		<action id="act9"  content="SaladoPlayer.stopMoving()"/>  <!-- no arguments used to stop startMoving and advancedStartMoving-->
		<action id="act10" content="SaladoPlayer.advancedStartMoving(1,1,0.0003,0.3,0.0001)"/> <!-- pan speed, tilt speed, sensitivity, friction, threshold -->
		<action id="act11" content="SaladoPlayer.advancedMoveToHotspot(hs1,90,2.5,Linear.easeIn)"/> <!--hotspot id, field of view, time, tween (Function) -->
		<action id="act12" content="SaladoPlayer.advancedMoveToHotspotAnd(hs1,90,2.5,Linear.easeOut,act1)"/> <!--hotspot id, field of view, time, tween (Function), action id -->
		<action id="act13" content="SaladoPlayer.advancedMoveToView(90,20,130,2.5,Linear.easeInOut)"/> <!--pan, tilt, field of view, time, tween (Function) -->
		<action id="act14" content="SaladoPlayer.advancedMoveToViewAnd(90,20,130,2.5,Linear.easeNone,act1)"/> <!--pan, tilt, field of view, time, tween (Function), action id -->
		<action id="act15" content="SaladoPlayer.runAction(act1)"/>	<!-- action id, watch out for loops-->
		<action id="act16" content="SaladoPlayer.print(One action can have);SaladoPlayer.print(many semicolon-separated functions)"/>
	</actions>
	<modules>
		<NavigationBar path="modules/NavigationBar.swf">
			<buttons path="modules/images/buttons_30x30_green.png"/>
			<basicButtons>
				<basicButton name="autorotation" visible="false"/>
			</basicButtons>
		</NavigationBar>
	</modules>
</SaladoPlayer>