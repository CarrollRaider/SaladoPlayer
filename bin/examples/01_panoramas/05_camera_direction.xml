<?xml version="1.0" encoding="utf-8" ?>
<!--
	Direction attribute helps synchornizing camera pan between panoramas that were shot in different directions.
	It takes values 0 to 360 that express geographical shooting direction of panorama image.
	For Instance: 0 is North, 90 is East, 180 is South 270 is West
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
	</global>
	<panoramas>
		<panorama id="greenChecker" path="panoramas/dz_green_check/green_check_f.xml" direction="0">
			<image id="gcBlueArrow" path="hotspots/images/blue_arrow.png" location="pan:10" mouse="onClick:loadBlueCheck"/>
			<image id="gcRedArrow" path="hotspots/images/red_arrow.png" location="pan:-10" mouse="onClick:loadBlueCheck"/>
		</panorama>
		<panorama id="blueChecker" path="panoramas/dz_blue_check/blue_check_f.xml" direction="45">
			<image id="bcGreenArrow" path="hotspots/images/green_arrow.png" location="pan:10" mouse="onClick:loadGreenCheck"/>
			<image id="bcRedArrow" path="hotspots/images/red_arrow.png" location="pan:-10" mouse="onClick:loadRedCheck"/>
		</panorama>
		<panorama id="redChecker" path="panoramas/dz_red_check/red_check_f.xml" direction="45">
			<image id="rcGreenArrow" path="hotspots/images/green_arrow.png" location="pan:10" mouse="onClick:loadGreenCheck"/>
			<image id="rcBlueArrow" path="hotspots/images/blue_arrow.png" location="pan:-10" mouse="onClick:loadBlueCheck"/>
		</panorama>
	</panoramas>
	<modules>
		<ViewFinder path="modules/ViewFinder-1.0.swf"/>
	</modules>
	<actions>
		<action id="loadGreenCheck" content="SaladoPlayer.loadPano(greenChecker)"/>
		<action id="loadBlueCheck" content="SaladoPlayer.loadPano(blueChecker)"/>
		<action id="loadRedCheck" content="SaladoPlayer.loadPano(redChecker)"/>
	</actions>
</SaladoPlayer>