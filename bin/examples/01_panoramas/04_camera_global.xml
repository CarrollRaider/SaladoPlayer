<?xml version="1.0" encoding="utf-8" ?>
<!-- 
	Camera attribute in global panoramas is same as in regular panorama, values set here
	will be applied to any panorama that has not such value set. By default global panoramas
	have maxFov set to 120 and minFov set to 30.
	For instance: in global camera have set maxTilt to 45, this won't be applied to panorama "greenCheck"
	couse it has its own maxTilt, however it will be applied to panorama "blueCheck"
-->
<SaladoPlayer>
	<global debug="true">
		<control autorotation="enabled:false"/>
		<panoramas camera="tilt:45,maxTilt:45"/>
	</global>
	<panoramas>
		<panorama id="greenCheck" path="panoramas/dz_green_check/green_check_f.xml" camera="maxTilt:100">
			<image id="blueArrow" path="hotspots/images/blue_arrow.png" location="pan:10" mouse="onClick:loadBlueCheck"/>
		</panorama>
		<panorama id="blueCheck" path="panoramas/dz_blue_check/blue_check_f.xml">
			<image id="greenArrow" path="hotspots/images/green_arrow.png" location="pan:-10" mouse="onClick:loadGreenCheck"/>
		</panorama>
	</panoramas>
	<actions>
		<action id="loadBlueCheck" content="SaladoPlayer.loadPano(blueCheck)"/>
		<action id="loadGreenCheck" content="SaladoPlayer.loadPano(greenCheck)"/>
	</actions>
</SaladoPlayer>