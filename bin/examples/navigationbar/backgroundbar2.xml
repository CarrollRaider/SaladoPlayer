<!--
	
	Bitmap fill for backgroundBar 
	
	- alpha determines transparency of backgroundBar, it takes values from 0 to 1
	- path points to image that will be used to fill backgroundBar
	- image will be x and y repeated
	- default height for backgroundBar is 30 pixels, but it can be adjusted e.g. to match image height 
	
-->	
<?xml version="1.0" encoding="utf-8"?>
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="pano1" label="Park" path="panoramas/dz_park/park_f.xml"/>
		<panorama id="pano2" label="Shopping mall" path="panoramas/dz_shoppingmall/sm_f.xml"/>
		<panorama id="pano3" label="Volleyball" path="panoramas/dz_volleyball/vb_f.xml"/>
	</panoramas>
	<modules>
		<NavigationBar path="modules/NavigationBar.swf">
			<buttons path="modules/images/buttons_30x30_green.png"/>
			<backgroundBar path="modules/images/bar_40_green.png" height="40" alpha="0.65"/>
		</NavigationBar>
	</modules>
</SaladoPlayer>