<!--
	
	bar bitmap fill
	
	- path points to image that is used to fill bar, image is -x and -y repeated to fill bar
	- default height is 30 pixels, but it can be adjusted e.g. to match image height 
	- default width is NaN (Not a Number) it is interpreted as using panorama window width
	- bar position can be adjusted with move and align attributes
	- see: http://panozona.com/wiki/Module:NavigationBar#bar
	
-->
<?xml version="1.0" encoding="utf-8"?>
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="pano1" label="Park" path="panoramas/dz_park/park_f.xml"/>
		<panorama id="pano2" label="Shopping mall" path="panoramas/dz_shoppingmall/sm_f.xml"/>
		<panorama id="pano3" label="Volleyball" path="panoramas/dz_volleyball/vb_f.xml"/>
	</panoramas>
	<modules>
		<NavigationBar path="modules/NavigationBar.swf">
			<buttons path="modules/images/buttons_30x30_green.png"/>
			<bar path="modules/images/bar_40_green.png" size="height:40,width:280" move="vertical:-5"/>
		</NavigationBar>
	</modules>
</SaladoPlayer>