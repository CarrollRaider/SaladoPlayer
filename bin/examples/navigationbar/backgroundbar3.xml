<!--
	
	This is example of setting color fill for backgroundBar 
	
	- if path is set, it has priority over color
	- you can change backgroundBar position with align and margin attributes
	
-->
<?xml version="1.0" encoding="utf-8"?>
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="pano1" label="Park" path="panoramas/dz_park/park_f.xml"/>
		<panorama id="pano2" label="Shopping mall" path="panoramas/dz_shoppingmall/sm_f.xml"/>
		<panorama id="pano3" label="Volleyball" path="panoramas/dz_volleyball/vb_f.xml"/>
	</panoramas>
	<modules>
		<NavigationBar path="modules/NavigationBar.swf">
			<buttons path="modules/images/buttons_30x30_green.png"/>
			<backgroundBar color="#00ff00" alpha="0.5" height="40" margin="top:5"/>
		</NavigationBar>
	</modules>
</SaladoPlayer>