<!--
	
	Advanced logo configuration
	
	- url is optional, it determines what site to open when logo is clicked
	- url has "http://" added in front, so "panozona.com/" becomes "http://panozona.com/" (colon is illegal character in string)
	- you can alter buttons position with margin and align attributes
	
-->	
<?xml version="1.0" encoding="utf-8"?>
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="pano1" label="Park" path="panoramas/dz_park/park_f.xml"/>
		<panorama id="pano2" label="Shopping mall" path="panoramas/dz_shoppingmall/sm_f.xml"/>
		<panorama id="pano3" label="Volleyball" path="panoramas/dz_volleyball/vb_f.xml"/>
	</panoramas>
	<modules>
		<NavigationBar path="modules/NavigationBar.swf">
			<buttons path="modules/images/buttons_30x30_green.png"/>
			<logo visible="true" path="modules/images/logo.png" url="panozona.com/" align="horizontal:left,vertical:bottom" margin="left:10,bottom:110"/>
		</NavigationBar>
	</modules>
</SaladoPlayer>