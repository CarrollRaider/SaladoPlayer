<!--
	
	Hiding buttons
		
	- buttons are visible by default
	- in order to hide all buttons set visible to "false" 
	- you can hide buttons selecively by setting visible to "false" in each basicButton of specific name
	- basic buttons are visible by default, avaible names are: left, right, up, down, in, out, drag, autorotate, fullscreen	
	
-->
<?xml version="1.0" encoding="utf-8"?>
<SaladoPlayer>
	<global debug="true"/>
	<panoramas>
		<panorama id="pano1" label="Park" path="panoramas/dz_park/park_f.xml"/>
		<panorama id="pano2" label="Shopping mall" path="panoramas/dz_shoppingmall/sm_f.xml"/>
		<panorama id="pano3" label="Volleyball" path="panoramas/dz_volleyball/vb_f.xml"/>
	</panoramas>
	<modules>
		<NavigationBar path="modules/NavigationBar.swf">
			<buttons visible="true" path="modules/images/buttons_30x30_green.png"/>
			<basicButtons>
				<basicButton name="left" visible="false"/>
				<basicButton name="right" visible="false"/>
				<basicButton name="up" visible="false"/>
				<basicButton name="down" visible="false"/>
			</basicButtons>
		</NavigationBar>
	</modules>	
</SaladoPlayer>